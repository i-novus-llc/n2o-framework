<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0" name="Обработка отклика">
    <form id="response" query-id="response" object-id="response">
        <fields>
            <output-text id="id"/>
            <row>
                <output-text id="position" label="Должность"/>
                <output-text id="salary" label="Предлагаемая зарплата"/>
            </row>
            <row>
                <input-text id="lastName" label="Фамилия" default-value=""/>
                <input-text id="salaryExpected" label="Ожидаемая зарплата" default-value="{salary}"/>
            </row>
        </fields>
        <toolbar place="bottomRight">
            <button label="save">
                <invoke operation-id="setTaskVariables" close-on-success="true"/>
            </button>
            <button label="complete">
                <invoke operation-id="completeTask" close-on-success="true" redirect-url="/" redirect-target="self"/>
            </button>
        </toolbar>
    </form>
</simple-page>