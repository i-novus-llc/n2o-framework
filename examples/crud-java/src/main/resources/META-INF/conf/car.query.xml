<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-5.0"
       object-id="car">

    <list result-mapping="content" count-mapping="totalElements">
        <java class="net.n2oapp.framework.tutorial.crud_java.service.CarService"
              method="findAll">
            <arguments>
                <argument type="criteria" class="net.n2oapp.framework.tutorial.crud_java.model.CarCriteria"/>
            </arguments>
            <spring/>
        </java>
    </list>

    <unique>
        <java class="net.n2oapp.framework.tutorial.crud_java.service.CarService"
              method="findById">
            <arguments>
                <argument type="primitive" name="id"/>
            </arguments>
            <spring/>
        </java>
    </unique>

    <filters>
        <eq field-id="id" filter-id="id" mapping="[0]"/>
        <more field-id="price" filter-id="minPrice" mapping="[0].minPrice"/>
        <less field-id="price" filter-id="maxPrice" mapping="[0].maxPrice"/>
    </filters>

    <fields>
        <field id="id" domain="long"/>
        <field id="name" domain="string"/>
        <field id="price" domain="long" sorting="true"/>
    </fields>
</query>