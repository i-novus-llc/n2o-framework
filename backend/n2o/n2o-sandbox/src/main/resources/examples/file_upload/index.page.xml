<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Страница загрузки файлов">
    <form>
        <datasource query-id="files"/>
        <fields>
            <file-upload label="Загрузка файлов" id="files" multi="true"
                         label-field-id="fileName"
                         value-field-id="id"
                         url-field-id="url"
                         upload-url="${n2o.sandbox.url}/files"
                         delete-url="${n2o.sandbox.url}/files"
                         accept=".img,.png,.xml"
            />
        </fields>
    </form>
</simple-page>
