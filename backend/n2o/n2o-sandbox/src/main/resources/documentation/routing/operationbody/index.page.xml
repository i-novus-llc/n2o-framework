<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
      name="Маршрут операции с параметром тела запроса">
    <regions>
        <form query-id="main" object-id="main">
            <fields>
                <input-text id="name"/>
            </fields>
            <toolbar>
                <button label="Сохранить">
                    <invoke operation-id="update" route="/update" submit-all="true">
                        <form-param id="doc.number"
                                    value="{number}"
                                    ref-widget-id="docs"
                                    ref-model="resolve"/>
                        <form-param id="doc.serial"
                                    value="{serial}"
                                    ref-widget-id="docs"
                                    ref-model="resolve"/>
                    </invoke>
                </button>
            </toolbar>
        </form>
        <form query-id="docs">
            <fields>
                <input-text id="number"/>
                <input-text id="serial"/>
            </fields>
        </form>
    </regions>
</page>