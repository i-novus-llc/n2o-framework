<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-3.0" name="Маршрут операции с параметром пути">
    <regions>
        <form query-id="person" object-id="person">
            <pre-filters>
                <eq field-id="id" param="personid"/>
            </pre-filters>
            <fields>
                <input-text id="name"/>
            </fields>
            <toolbar place="bottomLeft">
                <button label="Сохранить">
                    <invoke operation-id="update" route="/:person_id/update" method="PUT">
                        <path-param name="person_id" value="{id}"/>
                    </invoke>
                </button>
            </toolbar>
        </form>
    </regions>
</page>