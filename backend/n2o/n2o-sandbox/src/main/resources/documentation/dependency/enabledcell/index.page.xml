<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
              name="Блокирование кнопки ячейки по условию в атрибуте">
    <table>
        <datasource query-id="person"/>
        <columns>
            <column text-field-id="name"/>
            <column text-field-id="status"/>
            <column label="Доступно для status!=1">
                <toolbar>
                    <button enabled="{status!=1}" label="Изменить"/>
                </toolbar>
            </column>
        </columns>
    </table>
</simple-page>