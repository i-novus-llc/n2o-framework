<?xml version='1.0' encoding='UTF-8'?>
<searchable-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
                 name="Страница с поисковой строкой">
    <search-bar search-filter-id="name" search-param="name"
                placeholder="Найти по имени" datasource="ds"/>
    <datasources>
        <datasource id="ds" query-id="search"/>
    </datasources>
    <regions>
        <table id="table" datasource="ds">
            <columns>
                <column text-field-id="name" label="Фамилия И.О."/>
                <column text-field-id="date" label="Дата Рождения"/>
            </columns>
        </table>
    </regions>
</searchable-page>