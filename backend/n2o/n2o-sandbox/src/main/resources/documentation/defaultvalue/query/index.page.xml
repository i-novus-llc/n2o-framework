<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
      name="Выборка значений по умолчанию">
    <regions>
        <form>
            <fields>
                <alert id="text"
                       text="Для вызова режима слияния откройте любую строку таблицы кнопкой Изменить. В пустое поле загрузится значение по умолчанию. Пол - женский, статус - новый."/>
            </fields>
        </form>
        <table id="table" query-id="persons" object-id="persons">
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="name" label="ФИО"/>
                <column text-field-id="gender.name" label="Пол"/>
                <column text-field-id="status.name" label="Статус заявки"/>
            </columns>
            <toolbar>
                <group>
                    <button label="Добавить">
                        <show-modal page-id="modal" submit-operation-id="create"
                                    submit-label="Сохранить" upload="defaults"/>
                    </button>
                    <button label="Изменить">
                        <show-modal page-id="modal" submit-operation-id="update"
                                    route="/:id/update">
                            <path-param name="id" value="{id}"/>
                        </show-modal>
                    </button>
                </group>
            </toolbar>
        </table>
    </regions>
</page>

