<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Название и описание у ячейки с картинкой">
    <table query-id="test">
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="url" label="image">
                <image id="image1"
                       url="{url}"
                       title="{title}"
                       description="{desc}"
                       width="80px"/>
            </column>
        </columns>
    </table>
</simple-page>