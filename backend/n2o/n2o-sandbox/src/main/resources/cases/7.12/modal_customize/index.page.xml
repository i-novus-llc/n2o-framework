<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Модальное окно с настраиваемыми фоном и хедером">
    <form>
        <fields>
            <hidden id="id" default-value="1"/>
        </fields>
        <toolbar>
            <button label="Открыть с хедером">
                <show-modal page-id="test" class="text-info"/>
            </button>
            <button label="Открыть без хедера">
                <show-modal page-id="test" has-header="false"
                            style="background: red"/>
            </button>
            <button label="Открыть без фона">
                <show-modal page-id="test" backdrop="false"/>
            </button>
            <button label="Открыть с кликабельным фоном">
                <show-modal page-id="test" backdrop="true"/>
            </button>
        </toolbar>
    </form>
</simple-page>
