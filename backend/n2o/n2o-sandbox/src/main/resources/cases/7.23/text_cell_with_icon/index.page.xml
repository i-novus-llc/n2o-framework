<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Текстовая ячейка с иконкой">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column text-field-id="date" label="Дата регистрации">
                <text
                        format="date YYYY.MM.DD"
                        icon="fa fa-calendar"
                        icon-position="left"
                        subtext-field-id="date"
                        subtext-format="date HH:mm"
                />
            </column>
        </columns>
    </table>
</simple-page>