<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Input-select и input-select-tree с настраиваемым ожиданием ввода">
    <form>
        <fields>
            <input-select
                    id="test"
                    label="Input-select с ожиданием 1 сек"
                    placeholder="Минимальная длина 3 символа"
                    query-id="test"
                    search-filter-id="name"
                    search-min-length="3"
                    throttle-delay="1000">
            </input-select>

            <input-select-tree
                    id="tree"
                    label="Input-select-tree с ожиданием 500 мс"
                    placeholder="Минимальная длина 2 символа"
                    query-id="test"
                    search="true"
                    search-filter-id="name"
                    search-min-length="2"
                    throttle-delay="500">
            </input-select-tree>
        </fields>
    </form>
</simple-page>