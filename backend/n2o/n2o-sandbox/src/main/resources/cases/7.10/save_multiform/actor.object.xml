<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0">
    <operations>
        <operation id="create">
            <invocation>
                <rest method="POST">/data/actors/</rest>
            </invocation>
            <in>
                <field id="firstName"/>
                <field id="lastName"/>
                <field id="country"/>
            </in>
            <out>
                <field id="id"/>
            </out>
        </operation>
        <operation id="update">
            <invocation>
                <rest method="POST">/data/actors/</rest>
            </invocation>
            <in>
                <field id="id"/>
                <field id="firstName"/>
                <field id="lastName"/>
                <field id="country"/>
            </in>
        </operation>
        <operation id="delete">
            <invocation>
                <rest method="DELETE">/data/actors/{id}</rest>
            </invocation>
            <in>
                <field id="id"/>
            </in>
        </operation>
    </operations>
</object>