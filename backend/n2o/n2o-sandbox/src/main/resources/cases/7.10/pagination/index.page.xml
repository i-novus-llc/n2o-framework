<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
      name="Пагинация в списковых виджетах">
    <regions>
        <line label="Таблица с заданной пагинацией">
            <table query-id="test" size="2">
                <pagination show-single-page="true"
                        first="false"
                        last="true"
                        prev="true"
                        show-count="false"
                        next="true"/>
                <columns>
                    <column text-field-id="id"/>
                    <column text-field-id="name"/>
                </columns>
            </table>
        </line>
        <line label="Список с пагинацией по умолчанию">
            <list query-id="test" size="2">
                <content>
                    <left-top text-field-id="id"/>
                    <body text-field-id="name"/>
                </content>
            </list>
        </line>
    </regions>
</page>