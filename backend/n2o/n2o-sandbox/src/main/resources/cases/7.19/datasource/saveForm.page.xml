<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-3.0">
    <toolbar>
        <button id="save" widget-id="first" label="Сохранить" validate="page">
            <invoke operation-id="create" object-id="test" close-on-success="true"/>
        </button>
    </toolbar>
    <regions>
        <tabs>
            <tab name="Один">
                <form id="first">
                    <fields>
                        <input-text id="name" label="Имя"/>
                    </fields>
                </form>
            </tab>
            <tab name="Два">
                <form id="second">
                    <fields>
                        <input-text id="surname" label="Фамилия"/>
                    </fields>
                </form>
            </tab>
        </tabs>
    </regions>
</page>
