<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Подтверждение закрытия в overlay окне">
    <form>
        <fields>
            <hidden id="id" default-value="1"/>
        </fields>
        <toolbar>
            <button label="Модальное окно с подтверждением">
                <show-modal page-id="modal"/>
            </button>
            <button label="Модальное окно без подтверждения">
                <show-modal page-id="modal" unsaved-data-prompt-on-close="false"/>
            </button>
            <button label="Drawer с подтверждением">
                <open-drawer page-id="modal"/>
            </button>
            <button label="Drawer без подтверждения">
                <open-drawer page-id="modal" unsaved-data-prompt-on-close="false"/>
            </button>
        </toolbar>
    </form>
</simple-page>