<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Динамическое обновление ячеек таблицы">
    <table query-id="test">
        <columns>
            <column id="name1" text-field-id="name"/>

            <column id="nameE1" text-field-id="name" label="tbEnabled">
                <toolbar>
                    <button label="enabled for 'test1'" enabled="{name=='test1'}"/>
                </toolbar>
            </column>
            <column id="nameE2" text-field-id="name" label="cbEnabled">
                <checkbox enabled="{name=='test1'}"/>
            </column>
            <column id="nameE3" text-field-id="name" label="sbmEnabled">
                <toolbar>
                    <sub-menu>
                        <menu-item enabled="{name=='test1'}" label="enabled for 'test1'"/>
                        <menu-item enabled="{false}" label="always disabled"/>
                        <menu-item label="always enabled"/>
                    </sub-menu>
                </toolbar>
            </column>

            <column id="nameV1" text-field-id="name" label="tbVisible">
                <toolbar>
                    <button label="visible for 'test1'" visible="{name=='test1'}"/>
                </toolbar>
            </column>
            <column id="nameV2" text-field-id="name" label="cbVisible">
                <checkbox visible="{name=='test1'}"/>
            </column>
            <column id="nameV3" text-field-id="name" label="sbmVisible">
                <toolbar>
                    <sub-menu>
                        <menu-item visible="{name=='test1'}" label="visible for 'test1'"/>
                        <menu-item visible="{false}" label="always invisible"/>
                        <menu-item label="always visible"/>
                    </sub-menu>
                </toolbar>
            </column>

        </columns>
        <toolbar>
            <button id="update" label="update">
                <show-modal page-id="test" submit-operation-id="update" route="/:id/update">
                    <path-param name="id" value="{id}"/>
                </show-modal>
            </button>
        </toolbar>
    </table>
</simple-page>
