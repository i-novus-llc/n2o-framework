<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Расширенный поиск через модальное окно">
    <form id="form">
        <fields>
            <row>
                <input-text id="name" label="Имя">
                    <toolbar>
                        <button label="Расширенный поиск" model="filter">
                            <show-modal page-id="modal" submit-action-type="copy" submit-label="Выбрать"/>
                        </button>
                    </toolbar>
                </input-text>
            </row>
        </fields>
    </form>
</simple-page>
