<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Таблица с регулируемой высотой/шириной">
    <table query-id="test" width="500px" height="200px" text-wrap="false">
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="type"/>
            <column text-field-id="name" label="Название"/>
            <column text-field-id="ref.name" label="Название в несколько строк"/>
