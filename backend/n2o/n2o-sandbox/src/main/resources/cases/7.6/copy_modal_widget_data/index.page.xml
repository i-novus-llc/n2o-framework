<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Копирование данных из виджета модального окна">
    <form id="form">
        <fields>
            <input-text id="id"/>
            <input-text id="name"/>
        </fields>
        <toolbar>
            <button id="update" label="Открыть" model="filter">
                <show-modal page-id="modal" submit-action-type="copy" copy-widget-id="table"
                            submit-label="Выбрать" target-widget-id="form" copy-mode="merge"/>
            </button>
        </toolbar>
    </form>
</simple-page>
