<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Префильтрация данных на странице">
    <form query-id="detail">
        <fields>
            <input-text id="id" label="id должен соответствовать выбранной ранее строке"/>
            <input-text id="name" label="Название должно соответствовать выбранной ранее строке"/>
        </fields>
        <pre-filters>
            <eq field-id="name" param="name"/>
        </pre-filters>
    </form>
</simple-page>
