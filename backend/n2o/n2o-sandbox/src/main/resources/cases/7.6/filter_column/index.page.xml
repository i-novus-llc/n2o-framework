<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Фильтры в столбцах таблицы">
    <table query-id="test">
        <columns>
            <column text-field-id="id" label="Идентификатор"/>
            <filter-column text-field-id="name" label="Имя">
                <filter>
                    <input-text id="name"/>
                </filter>
            </filter-column>
            <filter-column text-field-id="birthday" label="Дата рождения">
                <filter>
                    <date-interval id="birthday"/>
                </filter>
                <cell>
                    <badge/>
                </cell>
            </filter-column>
        </columns>
    </table>
</simple-page>
