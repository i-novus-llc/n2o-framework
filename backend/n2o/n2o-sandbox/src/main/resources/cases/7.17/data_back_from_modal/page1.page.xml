<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Страница с/без выборки">
    <form query-id="test">
        <pre-filters>
            <eq field-id="id" param="id"/>
        </pre-filters>
        <fields>
            <input-text id="text" enabled="false" label="Поле с данными, введенными в модальном окне">
                <toolbar>
                    <button label="Ввести данные в модальном окне" disable-on-empty-model="false">
                        <show-modal page-id="modal" submit-action-type="copy"/>
                    </button>
                </toolbar>
            </input-text>
            <input-text id="name" enabled="false" label="Выборка текущего виджета"/>
        </fields>
    </form>
</simple-page>