<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
      name="Варианты представления пагинации">
    <regions>
        <tabs>
            <tab name="Разделённые кнопки">
                <table ref-id="table">
                    <pagination
                            last="true"
                            prev="true"
                            next="true"
                    />
                </table>
            </tab>
            <tab name="Плоские кнопки">
                <table ref-id="table">
                    <pagination
                            layout="flat"
                            last="true"
                            prev="true"
                            next="true"
                    />
                </table>
            </tab>
            <tab name="Окаймлённые кнопки">
                <table ref-id="table">
                    <pagination
                            layout="bordered"
                            last="true"
                            prev="true"
                            next="true"
                    />
                </table>
            </tab>
            <tab name="Окаймлённые кнопки со скруглением">
                <table ref-id="table">
                    <pagination
                            layout="bordered-rounded"
                            last="true"
                            prev="true"
                            next="true"
                    />
                </table>
            </tab>
            <tab name="Плоские круглые кнопки">
                <table ref-id="table">
                    <pagination
                            layout="flat-rounded"
                            last="true"
                            prev="true"
                            next="true"
                    />
                </table>
            </tab>
            <tab name="Круглые кнопки">
                <table ref-id="table">
                    <pagination
                            layout="separated-rounded"
                            last="true"
                            prev="true"
                            next="true"
                    />
                </table>
            </tab>
            <tab name="Без нумерации страниц">
                <table ref-id="table">
                    <pagination
                            first="false"
                            prev="true"
                            next="true"
                            max-pages="0"
                    />
                </table>
            </tab>
        </tabs>
    </regions>
</page>