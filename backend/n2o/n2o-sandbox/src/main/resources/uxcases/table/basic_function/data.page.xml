<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-3.0">
    <regions>
        <form query-id="data">
            <pre-filters>
                <eq field-id="id" param="id"/>
            </pre-filters>
            <fields>
                <row>
                    <col>
                        <input-text id="surname"/>
                        <input-text id="name"/>
                        <input-text id="patronymic"/>
                    </col>
                    <col>
                        <date-time id="birthday"/>
                        <radio-group id="gender" query-id="gender"
                                     label="Пол" inline="true"/>
                        <checkbox id="vip"/>
                    </col>
                </row>
            </fields>
        </form>
    </regions>
</page>
