<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Города России">
    <table selection="none">
        <datasource query-id="data"/>
        <columns>
            <column text-field-id="name" label="Субъект Федерации, Город">
                <badge src="StatusCell" color="{!population ? 'primary' : 'danger'}" text="{name}" position="left"/>
            </column>
            <column text-field-id="population" label="Население" />
        </columns>
    </table>
</simple-page>