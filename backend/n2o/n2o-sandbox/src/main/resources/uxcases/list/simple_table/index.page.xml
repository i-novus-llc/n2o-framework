<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Города России">
    <table selection="none">
        <datasource query-id="data"/>
        <columns>
            <column text-field-id="name" label="Наименование"/>
            <column text-field-id="region" label="Регион"/>
            <column text-field-id="population" label="Население"/>
            <column text-field-id="area" label="Площадь"/>
            <column text-field-id="link" label="Ссылка">
                <link target="newWindow" url="{link}"/>
            </column>
        </columns>
    </table>
</simple-page>