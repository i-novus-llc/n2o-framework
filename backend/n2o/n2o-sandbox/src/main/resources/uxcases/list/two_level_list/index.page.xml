<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0" name="Города России">
    <list query-id="data">
        <content>
            <left-top text-field-id="name">
                <text style="font-weight: bold"/>
            </left-top>
            <left-bottom text-field-id="region">
                <text style="font-size: 3mm"/>
            </left-bottom>
            <extra text-field-id="rating">
                <badge text="Рейтинг" color="{rating > 0 ? 'success' : 'danger'}"/>
            </extra>
        </content>
    </list>
</simple-page>