                                <col size="6">
                                        <input-text id="city" label="Населенный пункт" required="true"/>
                                </col>
                            </row>
                            <row>
                                <col size="6">
                                        <input-text id="street" label="Улица" required="true"/>
                                </col>
                                <col size="3">
                                    <input-text id="house" label="Дом" required="true"/>
