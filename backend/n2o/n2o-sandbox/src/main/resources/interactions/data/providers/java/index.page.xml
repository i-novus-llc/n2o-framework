<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Java провайдер данных">
    <table>
        <datasource query-id="person"/>
        <toolbar place="topLeft">
            <button id="create" label="Создать" icon="fa fa-plus" disable-on-empty-model="false">
                <show-modal page-id="person" submit-operation-id="create">
                    <datasources>
                        <datasource default-values-mode="defaults"/>
                    </datasources>
                </show-modal>
            </button>
            <button id="update" label="Изменить" icon="fa fa-pencil">
                <show-modal page-id="person" submit-operation-id="update" route="/:id/update">
                    <params>
                        <path-param name="id" value="{id}"/>
                    </params>
                </show-modal>
            </button>
            <button id="delete" label="Удалить" icon="fa fa-trash">
                <invoke operation-id="delete"/>
            </button>
        </toolbar>
        <columns>
            <column label="Имя" text-field-id="firstName"/>
            <column label="Фамилия" text-field-id="lastName"/>
        </columns>
    </table>
</simple-page>