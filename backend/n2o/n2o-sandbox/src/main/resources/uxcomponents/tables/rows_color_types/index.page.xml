<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Цвета строк">
    <table selection="none">
        <datasource query-id="data" />
        <columns>
            <column text-field-id="id" label="№"/>
            <column label="Фамилия И.О" text-field-id="name"/>
            <column text-field-id="date" label="Дата рождения"/>
        </columns>
        <rows>
            <switch value-field-id="type">
                <case value="1">table-primary</case>
                <case value="2">table-secondary</case>
                <case value="3">table-success</case>
                <case value="4">table-danger</case>
                <case value="5">table-warning</case>
                <case value="6">table-info</case>
                <case value="7">table-dark</case>
                <case value="8">table-light</case>
            </switch>
        </rows>
    </table>
</simple-page>