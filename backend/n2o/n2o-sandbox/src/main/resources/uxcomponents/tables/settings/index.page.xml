<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      xmlns:ts="http://n2oapp.net/framework/config/schema/table-settings-1.0"
      name="Настройки таблицы">
    <datasources>
        <datasource id="ds" query-id="data" size="5"/>
    </datasources>

    <regions>
        <table datasource="ds" selection="none">
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="id_ips"/>
                <column text-field-id="name"/>
                <column text-field-id="region"/>
            </columns>
            <filters place="top">
                <row>
                    <col size="4">
                        <input-text id="name"/>
                    </col>
                </row>
            </filters>
            <toolbar place="topRight">
                <group>
                    <ts:filters/>
                    <ts:columns default-value="id_ips,name,region" locked="id"/>
                    <ts:refresh/>
                    <ts:resize/>
                    <ts:word-wrap/>
                    <ts:export/>
                    <ts:reset-settings/>
                </group>
            </toolbar>
        </table>
    </regions>
</page>
