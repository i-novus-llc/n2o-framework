<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <unique filters="id">
        <test file="person.json" operation="findOne"/>
    </unique>

    <fields>
        <field id="id" domain="integer">
            <select/>
            <filters>
                <eq filter-id="id"/>
            </filters>
        </field>
        <field id="name">
            <select/>
        </field>
        <field id="surname">
            <select/>
        </field>
        <field id="birthday">
            <select/>
        </field>
    </fields>
</query>

