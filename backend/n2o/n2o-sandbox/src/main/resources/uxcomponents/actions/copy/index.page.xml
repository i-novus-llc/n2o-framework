      name="Копирование данных">
    <datasources>
        <datasource id="ds1"/>
    </datasources>
    <regions>
        <form>
            <fields>
                <input-text id="name" default-value="Привет, Мир!" no-label-block="true"/>
            </fields>
            <toolbar place="bottomLeft">
                <button id="btn" label="Копирование">
                    <copy target-datasource="ds1"/>
                </button>
            </toolbar>
        </form>
        <form id="form" datasource="ds1">
            <fields>
                <input-text id="name" no-label-block="true"/>
            </fields>
        </form>
    </regions>
</page>
