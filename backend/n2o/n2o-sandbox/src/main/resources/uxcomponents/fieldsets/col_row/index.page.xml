<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Расположение полей в строку или столбец">
    <form>
        <fields>
            <set>
                <row>
                    <!-- Первая строка с двумя столбцами -->
                    <col size="8">
                        <!-- Поля первого столбца -->
                        <input-text id="f1" label="row1-col1"/>
                        <input-text id="f2" label="row2-col1"/>
                        <input-text id="f3" label="row3-col1"/>
                    </col>
                    <col size="4">
                        <!-- Поля второго столбца -->
                        <input-text id="f4" label="row1-col2"/>
                        <input-text id="f5" label="row2-col2"/>
                    </col>
                </row>
                <row>
                    <!-- Вторая строка -->
                    <input-text id="f6" label="row4-col1"/>
                    <input-text id="f7" label="row4-col2"/>
                </row>
            </set>
        </fields>
    </form>
</simple-page>
