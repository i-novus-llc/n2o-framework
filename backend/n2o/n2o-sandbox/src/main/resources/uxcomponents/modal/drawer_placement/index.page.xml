<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Расположение боковой панели">
    <form>
        <toolbar>
            <button label="Открыть справа" disable-on-empty-model="false">
                <open-drawer page-id="modal"/>
            </button>
            <button label="Открыть слева" disable-on-empty-model="false">
                <open-drawer page-id="modal" placement="left"/>
            </button>
            <button label="Открыть сверху" disable-on-empty-model="false">
                <open-drawer page-id="modal" placement="top"/>
            </button>
            <button label="Открыть снизу" disable-on-empty-model="false">
                <open-drawer page-id="modal" placement="bottom"/>
            </button>
        </toolbar>
    </form>
</simple-page>
