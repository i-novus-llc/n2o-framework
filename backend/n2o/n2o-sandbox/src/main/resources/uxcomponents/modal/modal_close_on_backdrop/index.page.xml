<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Закрытие модальных окон кликом по фону">
    <form>
        <toolbar>
            <button label="Открыть модальное окно" disable-on-empty-model="false">
                <show-modal page-id="modal" backdrop="true" page-name="Модальное окно"/>
            </button>
            <button label="Открыть боковую панель" disable-on-empty-model="false">
                <open-drawer page-id="modal" close-on-backdrop="true" page-name="Боковая панель"/>
            </button>
        </toolbar>
    </form>
</simple-page>