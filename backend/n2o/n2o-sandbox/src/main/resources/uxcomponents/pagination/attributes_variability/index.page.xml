<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Пагинация">
    <table>
        <datasource query-id="person" size="5"/>
        <pagination
                last="true"
                prev="true"
                next="true"
                first-label="На первую"
                last-label="На последнюю"
                prev-label="Назад"
                next-label="Вперёд"/>
        <columns>
            <column text-field-id="id" label="Идентификатор"/>
            <column text-field-id="name" label="Имя"/>
        </columns>
    </table>
</simple-page>