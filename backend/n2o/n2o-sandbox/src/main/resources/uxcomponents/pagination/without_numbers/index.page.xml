<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Пагинация без нумерации страниц">
    <table>
        <datasource query-id="person" size="5"/>
        <pagination
                first="false"
                prev="true"
                next="true"
                prev-label="Назад"
                next-label="Вперёд"
                max-pages="0"
                show-count="false"/>
        <columns>
            <column text-field-id="id" label="Идентификатор"/>
            <column text-field-id="name" label="Имя"/>
        </columns>
    </table>
</simple-page>