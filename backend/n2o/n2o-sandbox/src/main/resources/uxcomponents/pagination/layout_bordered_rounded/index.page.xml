<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Пагинация с окаймлёнными кнопками со скруглением">
    <table>
        <datasource query-id="person" size="5"/>
        <pagination
                layout="bordered-rounded"
                last="true"
                prev="true"
                next="true"/>
        <columns>
            <column text-field-id="id" label="Идентификатор"/>
            <column text-field-id="name" label="Имя"/>
        </columns>
    </table>
</simple-page>