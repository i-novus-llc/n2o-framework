<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Ссылки в ячейках">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column id="c0" label="" text-field-id="name0">
                <text/>
            </column>
            <column id="c1" label="Текст" text-field-id="name1">
                <link url="/{url}"/>
            </column>
            <column id="c2" label="Текст и иконка" text-field-id="name2">
                <link icon="{icon}" url="/{url}"/>
            </column>
            <column id="c3" label="Иконка">
                <link icon="{icon}" url="/{url}"/>
            </column>
            <column id="c4" label="Статическая иконка">
                <link icon="fa fa-plus" url="/{url}"/>
            </column>
            <column id="c5" label="Внешняя ссылка" text-field-id="name5">
                <link url="https://google.com?q={url}"/>
            </column>
        </columns>
    </table>
</simple-page>