<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Префильтрация модальных окон">
    <table>
        <toolbar>
            <button label="Модальное окно">
                <show-modal page-id="modal">
                    <datasources>
                        <datasource>
                            <filters>
                                <eq field-id="field1" value="{field1}"/>
                                <eq field-id="field2" value="{field2}"/>
                            </filters>
                        </datasource>
                    </datasources>
                </show-modal>
            </button>
        </toolbar>
        <datasource query-id="test"/>
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="field1"/>
            <column text-field-id="field2"/>
        </columns>
    </table>
</simple-page>