<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Зависимости на кнопках от master виджета">
    <regions>
        <table id="master">
            <datasource query-id="test"/>
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="type"/>
            </columns>
        </table>
        <table id="detail">
            <toolbar>
                <button label="Зависит от master resolve"
                        description="Блокируется, если в master type!=1" datasource="master" enabled="{type==1}"/>
                <button label="Зависит от detail filter"
                        description="Блокируется, если в detail filter type!=1" model="filter" enabled="{type==1}"/>
            </toolbar>
            <datasource query-id="test">
                <dependencies>
                    <fetch on="master" model="resolve"/>
                </dependencies>
                <filters>
                    <eq field-id="id" value="{id}" datasource="master" model="resolve" required="true"/>
                </filters>
            </datasource>
            <columns>
                <column text-field-id="id"/>
            </columns>
            <filters>
                <input-text id="type"/>
            </filters>
        </table>
    </regions>
</page>