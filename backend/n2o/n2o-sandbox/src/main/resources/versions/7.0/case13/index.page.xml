<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Условия на кнопках формы">
    <form>
        <toolbar>
            <button id="btn" label="Кнопка" visible="{test != 2}" enabled="{test != 1}"/>
        </toolbar>
        <fields>
            <input-text id="test" description="Если 1, то кнопка блокируется, если 2 - скрывается" domain="integer" default-value="12"/>
        </fields>
    </form>
</simple-page>