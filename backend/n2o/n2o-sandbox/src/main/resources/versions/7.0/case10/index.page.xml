<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Тест валидаций">
    <form>
        <toolbar>
            <button label="Не валидно" description="Валидация задана через white-list. Должна сработать" validate="true">
                <invoke operation-id="case1"/>
            </button>
            <button label="Не валидно" description="Должны сработать все валидации. Пустой список &lt;validations/&gt;." validate="true">
                <invoke operation-id="case2"/>
            </button>
            <button label="Валидно" description="Валидации не должны сработать. Нет тега &lt;validations/&gt;" validate="true">
                <invoke operation-id="case3"/>
            </button>
        </toolbar>
        <datasource object-id="test"/>
        <fields>
            <input-text id="id" default-value="1"/>
            <input-text id="dat" label="Поле с двумя валидациями" description="Поле валидно, если ввели test">
                <dependencies>
                    <requiring on="id">
                        id==1
                    </requiring>
                </dependencies>
                <validations>
                    <condition id="dateCheck" severity="danger" message="Вторая валидация">return dat=='test'</condition>
                </validations>
            </input-text>
        </fields>
    </form>
</simple-page>