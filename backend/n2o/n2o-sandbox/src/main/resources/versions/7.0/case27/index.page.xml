<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Редирект с изменением значения">
    <regions>
        <form id="master">
            <datasource query-id="test" object-id="test"/>
            <fields>
                <row>
                    <input-text id="id"/>
                    <output-text id="time"/>
                </row>
            </fields>
        </form>
        <table id="detail">
            <toolbar place="bottomRight">
                <button label="Обновить master">
                    <invoke operation-id="time"/>
                </button>
            </toolbar>
            <datasource query-id="test">
                <dependencies>
                    <fetch on="master" model="resolve"/>
                </dependencies>
                <filters>
                    <eq field-id="id" value="{id}" datasource="master" model="resolve" required="true"/>
                </filters>
            </datasource>
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="time"/>
            </columns>
        </table>
    </regions>
</page>