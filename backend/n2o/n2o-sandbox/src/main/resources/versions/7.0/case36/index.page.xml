<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Ячейка чекбокс">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column id="c2" label="Без action" text-field-id="check1">
                <checkbox/>
            </column>
            <column id="c3" label="C action" text-field-id="check2">
                <checkbox>
                    <invoke operation-id="update"/>
                </checkbox>
            </column>
            <column id="c1" label="С условием на enabled" text-field-id="check3">
                <checkbox enabled="{check==true}"/>
            </column>
        </columns>
    </table>
</simple-page>