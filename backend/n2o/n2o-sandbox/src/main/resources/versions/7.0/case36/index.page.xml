<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Ячейка чекбокс">
    <table query-id="test">
        <columns>
            <column text-field-id="check1" label="Без action" id="c2">
                <checkbox/>
            </column>
            <column text-field-id="check2" label="C action" id="c3">
                <checkbox>
                    <invoke operation-id="update"/>
                </checkbox>
            </column>
            <column text-field-id="check3" label="С условием на enabled" id="c1">
                <checkbox enabled="{check==true}"/>
            </column>
        </columns>
    </table>
</simple-page>
