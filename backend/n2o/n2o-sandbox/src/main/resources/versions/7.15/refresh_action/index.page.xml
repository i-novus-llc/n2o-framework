<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Действие обновления данных виджета">
    <regions>
        <form>
            <toolbar place="bottomLeft">
                <button label="Обновить таблицу" icon="fa fa-refresh" disable-on-empty-model="false">
                    <refresh datasource="users"/>
                </button>
            </toolbar>
            <datasource object-id="test"/>
            <fields>
                <input-text id="name" label="Имя">
                    <toolbar>
                        <button label="Сохранить">
                            <invoke operation-id="send"/>
                        </button>
                    </toolbar>
                </input-text>
            </fields>
        </form>
        <table id="users">
            <toolbar place="topRight">
                <button label="Обновить" icon="fa fa-refresh" disable-on-empty-model="false">
                    <refresh datasource="users"/>
                </button>
            </toolbar>
            <datasource query-id="test" object-id="test"/>
            <columns>
                <column label="ID" text-field-id="id"/>
                <column label="Имя" text-field-id="name"/>
            </columns>
        </table>
    </regions>
</page>