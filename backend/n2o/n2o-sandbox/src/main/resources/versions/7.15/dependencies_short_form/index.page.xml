<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Короткий способ задания зависимостей">
    <regions>
        <tabs>
            <tab name="Поля">
                <form>
                    <fields>
                        <line label="Enabled">
                            <row>
                                <radio-group id="type1">
                                    <options>
                                        <option name="Доступно" id="1"/>
                                        <option name="Недоступно" id="2"/>
                                    </options>
                                </radio-group>
                                <input-text id="field1" enabled="{type1.id == 1}"/>
                            </row>
                        </line>
                        <line label="Visible">
                            <row>
                                <radio-group id="type2">
                                    <options>
                                        <option name="Видимость" id="1"/>
                                        <option name="Скрытие" id="2"/>
                                    </options>
                                </radio-group>
                                <input-text id="field2" visible="{type2.id == 1}"/>
                            </row>
                        </line>
                        <line label="Required">
                            <row>
                                <radio-group id="type3">
                                    <options>
                                        <option name="Обязательность" id="1"/>
                                        <option name="Не обязательность" id="2"/>
                                    </options>
                                </radio-group>
                                <input-text id="field3" required="{type3.id == 1}"/>
                            </row>
                        </line>
                    </fields>
                </form>
            </tab>
            <tab name="Филдсеты">
                <form>
                    <fields>
                        <line label="Enabled">
                            <row>
                                <radio-group id="type4">
                                    <options>
                                        <option name="Доступно" id="1"/>
                                        <option name="Недоступно" id="2"/>
                                    </options>
                                </radio-group>
                                <set enabled="{type4.id == 1}">
                                    <input-text id="field4"/>
                                    <input-text id="field5"/>
                                </set>
                            </row>
                        </line>
                        <line label="Visible">
                            <row>
                                <radio-group id="type5">
                                    <options>
                                        <option name="Видимость" id="1"/>
                                        <option name="Скрытие" id="2"/>
                                    </options>
                                </radio-group>
                                <set visible="{type5.id == 1}">
                                    <input-text id="field6"/>
                                    <input-text id="field7"/>
                                </set>
                            </row>
                        </line>
                    </fields>
                </form>
            </tab>
            <tab name="Кнопки">
                <form>
                    <fields>
                        <line label="Enabled">
                            <row>
                                <radio-group id="type6">
                                    <toolbar>
                                        <button label="Кнопка1" enabled="{type6.id == 1 || type6.id == 2}"/>
                                        <sub-menu label="Сабменю">
                                            <menu-item label="Кнопка1 сабменю" enabled="{type6.id == 1 || type6.id == 3}"/>
                                            <menu-item label="Кнопка2 сабменю" enabled="{type6.id == 1 || type6.id == 4}"/>
                                        </sub-menu>
                                    </toolbar>
                                    <options>
                                        <option name="Доступно все" id="1"/>
                                        <option name="Только кнопка" id="2"/>
                                        <option name="Только первая кнопка сабменю" id="3"/>
                                        <option name="Только вторая кнопка сабменю" id="4"/>
                                        <option name="Недоступна ни одна кнопка" id="5"/>
                                    </options>
                                </radio-group>
                            </row>
                        </line>
                        <line label="Visible">
                            <row>
                                <radio-group id="type7">
                                    <toolbar>
                                        <button label="Кнопка1" visible="{type7.id == 1 || type7.id == 2}"/>
                                        <sub-menu label="Сабменю">
                                            <menu-item label="Кнопка1 сабменю" visible="{type7.id == 1 || type7.id == 3}"/>
                                            <menu-item label="Кнопка2 сабменю" visible="{type7.id == 1 || type7.id == 4}"/>
                                        </sub-menu>
                                    </toolbar>
                                    <options>
                                        <option name="Видимо все" id="1"/>
                                        <option name="Только кнопка" id="2"/>
                                        <option name="Только первая кнопка сабменю" id="3"/>
                                        <option name="Только вторая кнопка сабменю" id="4"/>
                                        <option name="Скрыты все кнопки" id="5"/>
                                    </options>
                                </radio-group>
                            </row>
                        </line>
                    </fields>
                </form>
            </tab>
        </tabs>
    </regions>
</page>