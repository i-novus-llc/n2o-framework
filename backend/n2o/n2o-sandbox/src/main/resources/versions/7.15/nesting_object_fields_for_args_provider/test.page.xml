<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form>
        <datasource query-id="test">
            <filters>
                <eq field-id="id" param="id"/>
            </filters>
        </datasource>
        <fields>
            <input-text id="name" required="true" label="Простое"/>
            <input-select id="org" label="Ссылка">
                <options>
                    <option name="org1" id="1"/>
                    <option name="org2" id="2"/>
                </options>
            </input-select>
            <input-select id="departments" label="Список" type="multi">
                <options>
                    <option name="department1" id="1"/>
                    <option name="department2" id="2"/>
                    <option name="department3" id="3"/>
                    <option name="department4" id="4"/>
                </options>
            </input-select>
        </fields>
    </form>
</simple-page>