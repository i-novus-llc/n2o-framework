<?xml version='1.0' encoding='UTF-8'?>
<application xmlns="http://n2oapp.net/framework/config/schema/application-3.0">
    <datasources>
        <datasource id="ds" query-id="test"/>
    </datasources>

    <header title="{fio}" home-page-url="#" datasource="ds">
        <nav>
            <menu-item name="Главная страница"/>
            <menu-item name="Новые записи {news_count}"/>
            <menu-item name="Сообщения {message_count}" icon="fa fa-envelope-o"/>
        </nav>
        <extra-menu>
            <dropdown-menu name="{email}">
                <menu-item name="Настройки"/>
                <menu-item name="{notification_count}" icon="fa fa-bell-o"/>
            </dropdown-menu>
        </extra-menu>
    </header>
</application>