<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Фильтрация input-select по array фильтру">
    <form>
        <fields>
            <input-select id="list1" label="Выпадающий список 1" query-id="test" label-field-id="name" value-field-id="id" search="false" type="checkboxes"/>
            <input-select-tree id="list2" label="Дерево Выпадающий список 2" query-id="test" label-field-id="name" value-field-id="id" checkboxes="true" parent-field-id="parentId">
                <filters>
                    <in field-id="id" values="{list1*.id}"/>
                </filters>
            </input-select-tree>
            <input-select id="list3" label="Выпадающий список 3" query-id="test" label-field-id="name" value-field-id="id">
                <filters>
                    <in field-id="id" values="{list1*.id}"/>
                </filters>
            </input-select>
        </fields>
    </form>
</simple-page>