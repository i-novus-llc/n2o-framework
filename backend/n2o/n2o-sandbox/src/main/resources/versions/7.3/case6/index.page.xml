<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Стили для строк в таблице">
    <regions>
        <table>
            <datasource query-id="test"/>
            <rows class="font-weight-bold"/>
            <columns>
                <column text-field-id="name">
                    <text/>
                </column>
                <column text-field-id="type">
                    <badge/>
                </column>
                <column text-field-id="check">
                    <checkbox/>
                </column>
            </columns>
        </table>
        <table>
            <datasource query-id="test"/>
            <rows>
                <switch value-field-id="type">
                    <case value="1">font-weight-bold</case>
                </switch>
            </rows>
            <columns>
                <column text-field-id="name">
                    <text/>
                </column>
                <column text-field-id="type">
                    <badge/>
                </column>
                <column text-field-id="check">
                    <checkbox/>
                </column>
            </columns>
        </table>
    </regions>
</page>