<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form>
        <toolbar>
            <button id="create" label="Сохранить" visible="{typeof id == 'undefined' || id == null}">
                <invoke close-on-success="true" operation-id="create"/>
            </button>
            <button id="update" label="Сохранить" visible="{id != null}">
                <invoke close-on-success="true" operation-id="update"/>
            </button>
        </toolbar>
        <datasource query-id="role">
            <filters>
                <eq field-id="id" param="role_id"/>
            </filters>
        </datasource>
        <fields>
            <input-text id="actorId" param="actor_id"/>
            <input-text id="name"/>
        </fields>
    </form>
</simple-page>