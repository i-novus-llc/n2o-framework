<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Обновить запись">
    <form>
        <toolbar place="bottomLeft">
            <button id="testPUT" label="testPUT">
                <invoke close-on-success="true" operation-id="update" method="PUT">
                    <form-param id="id" value="{id}"/>
                    <form-param id="name" value="{name}"/>
                </invoke>
            </button>
        </toolbar>
        <datasource query-id="test">
            <filters>
                <eq field-id="id" param="id"/>
            </filters>
        </datasource>
        <fields>
            <input-text id="id" enabled="false"/>
            <input-text id="name"/>
        </fields>
    </form>
</simple-page>