<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Сложная форма">
    <toolbar>
        <button id="create" label="Сохранить" datasource="master" visible="{typeof id == 'undefined' || id == null}">
            <invoke close-on-success="true" operation-id="create">
                <form-param id="country" value="{country}" datasource="country" model="resolve"/>
            </invoke>
        </button>
        <button id="save" label="Сохранить" datasource="master" visible="{id != null}">
            <invoke close-on-success="true" operation-id="update">
                <form-param id="country" value="{country}" datasource="country" model="resolve"/>
            </invoke>
        </button>
    </toolbar>
    <regions>
        <form id="master">
            <datasource query-id="actor">
                <filters>
                    <eq field-id="id" param="actor_id"/>
                </filters>
            </datasource>
            <fields>
                <input-text id="firstName" label="Имя"/>
                <input-text id="lastName" label="Фамилия"/>
            </fields>
        </form>
        <tabs>
            <tab name="Зависимая форма">
                <form id="country">
                    <datasource query-id="actor" route="/country">
                        <dependencies>
                            <fetch on="master" model="resolve"/>
                        </dependencies>
                        <filters>
                            <eq field-id="id" param="actor_id" value="{id}" datasource="master" model="resolve" required="true"/>
                        </filters>
                    </datasource>
                    <fields>
                        <input-text id="country" label="Страна"/>
                    </fields>
                </form>
            </tab>
            <tab name="Зависимая таблица">
                <table id="roles">
                    <toolbar>
                        <button id="createRole" label="Создать" model="filter">
                            <open-page page-id="role" route="/createRole">
                                <datasources>
                                    <datasource default-values-mode="defaults"/>
                                </datasources>
                            </open-page>
                            <dependencies>
                                <enabling datasource="master" model="resolve">id != null</enabling>
                            </dependencies>
                        </button>
                        <button id="updateRole" label="Изменить">
                            <open-page page-id="role" route="/:role_id/updateRole">
                                <params>
                                    <path-param name="role_id" value="{id}"/>
                                </params>
                            </open-page>
                        </button>
                        <button id="delete" label="Удалить">
                            <invoke operation-id="delete"/>
                        </button>
                    </toolbar>
                    <datasource query-id="role">
                        <dependencies>
                            <fetch on="master" model="resolve"/>
                        </dependencies>
                        <filters>
                            <eq field-id="actorId" param="actor_id" datasource="master"/>
                        </filters>
                    </datasource>
                    <columns>
                        <column text-field-id="name"/>
                    </columns>
                </table>
            </tab>
        </tabs>
    </regions>
</page>