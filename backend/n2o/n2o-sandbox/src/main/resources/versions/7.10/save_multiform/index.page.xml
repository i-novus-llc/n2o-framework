<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Сохранение нескольких форм одновременно">
    <regions>
        <table>
            <toolbar>
                <button id="create" label="Создать" model="filter">
                    <open-page page-id="fewForms" route="/create">
                        <datasources>
                            <datasource default-values-mode="defaults"/>
                        </datasources>
                    </open-page>
                </button>
                <button id="update" label="Изменить">
                    <open-page page-id="fewForms" route="/:actor_id/update">
                        <params>
                            <path-param name="actor_id" value="{id}"/>
                        </params>
                    </open-page>
                </button>
                <button id="delete" label="Удалить">
                    <invoke operation-id="delete"/>
                </button>
            </toolbar>
            <datasource query-id="actor"/>
            <columns>
                <column text-field-id="id"/>
                <column label="Имя" text-field-id="firstName"/>
                <column label="Фамилия" text-field-id="lastName"/>
                <column label="Страна" text-field-id="country"/>
            </columns>
        </table>
    </regions>
</page>