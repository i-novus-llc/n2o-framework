<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Стили для заголовков таблицы">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column label="Шрифт Italic" class="font-italic" text-field-id="name">
                <text/>
            </column>
            <multi-column label="Красный текст" style="color: red">
                <column label="Красный текст" style="color: red" text-field-id="type">
                    <badge/>
                </column>
            </multi-column>
            <filter-column style="color: red" text-field-id="id">
                <filter>
                    <input-text id="id"/>
                </filter>
            </filter-column>
        </columns>
    </table>
</simple-page>