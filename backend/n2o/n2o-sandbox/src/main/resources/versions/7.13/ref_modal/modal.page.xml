<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Модальная страница с прокинутыми значениями">
    <form id="info">
        <fields>
            <input-text id="city" label="Значение из поля виджета, в котором кнопка открытия окна"
                        ref-page="parent" default-value="{city}"/>
            <input-text id="street" label="Значение из поля другого виджета"
                        ref-page="parent" ref-datasource="form2" default-value="{street}"/>
            <input-text id="house" label="Значение вводимое только в модальном окне"/>
        </fields>
    </form>
</simple-page>