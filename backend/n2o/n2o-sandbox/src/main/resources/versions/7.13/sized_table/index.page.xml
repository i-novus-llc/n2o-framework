<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Таблица с регулируемой высотой/шириной">
    <table width="500px" height="200px" text-wrap="false">
        <datasource query-id="test"/>
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="type"/>
            <column label="Название" text-field-id="name"/>
            <column label="Название в несколько строк" text-field-id="ref.name"/>
            <column text-field-id="check">
                <checkbox/>
            </column>
            <column text-field-id="birthDate"/>
        </columns>
    </table>
</simple-page>