<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Статус у ячейки и поля с картинкой">
    <regions>
        <line label="Статус у поля с картинкой">
            <form>
                <datasource query-id="test">
                    <filters>
                        <eq field-id="id" value="1"/>
                    </filters>
                </datasource>
                <fields>
                    <image id="image" data="{image}">
                        <statuses>
                            <status field-id="status" icon="{icon}" place="topRight"/>
                        </statuses>
                    </image>
                </fields>
            </form>
        </line>
        <line label="Статус у ячейки с картинкой">
            <tiles>
                <datasource query-id="test"/>
                <content>
                    <block text-field-id="image">
                        <image>
                            <statuses>
                                <status field-id="status" icon="{icon}" place="topRight"/>
                            </statuses>
                        </image>
                    </block>
                </content>
            </tiles>
        </line>
    </regions>
</page>