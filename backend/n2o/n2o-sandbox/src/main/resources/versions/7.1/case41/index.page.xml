<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Клик по row и контекстные кнопки">
    <regions>
        <table>
            <datasource query-id="test"/>
            <rows>
                <click>
                    <open-page page-id="test" submit-operation-id="update" route="/:id/open">
                        <params>
                            <path-param name="id" value="{id}"/>
                        </params>
                    </open-page>
                </click>
            </rows>
            <columns>
                <column text-field-id="name">
                    <text/>
                </column>
                <column text-field-id="type">
                    <badge/>
                </column>
                <column text-field-id="check">
                    <checkbox/>
                </column>
                <column text-field-id="">
                    <toolbar>
                        <button id="t2" icon="fa fa-plus">
                            <show-modal page-id="test" submit-operation-id="update" route="/:id/modal">
                                <params>
                                    <path-param name="id" value="{id}"/>
                                </params>
                            </show-modal>
                        </button>
                        <button id="t3" icon="fa fa-pencil">
                            <open-page page-id="test" submit-operation-id="update" route="/:id/open">
                                <params>
                                    <path-param name="id" value="{id}"/>
                                </params>
                            </open-page>
                        </button>
                        <sub-menu label="Действия">
                            <menu-item id="t1" label="show-modal">
                                <show-modal page-id="test" submit-operation-id="update" route="/:id/modal">
                                    <params>
                                        <path-param name="id" value="{id}"/>
                                    </params>
                                </show-modal>
                            </menu-item>
                            <menu-item id="t4" label="open-page">
                                <open-page page-id="test" submit-operation-id="update" route="/:id/open">
                                    <params>
                                        <path-param name="id" value="{id}"/>
                                    </params>
                                </open-page>
                            </menu-item>
                        </sub-menu>
                    </toolbar>
                </column>
            </columns>
        </table>
        <list>
            <datasource query-id="test"/>
            <content>
                <left-top text-field-id="name">
                    <text/>
                </left-top>
                <body text-field-id="type">
                    <badge/>
                </body>
                <right-top text-field-id="check">
                    <checkbox/>
                </right-top>
                <extra text-field-id="">
                    <toolbar>
                        <button id="t2" icon="fa fa-plus">
                            <show-modal page-id="test" submit-operation-id="update" route="/:id/modal">
                                <params>
                                    <path-param name="id" value="{id}"/>
                                </params>
                            </show-modal>
                        </button>
                        <button id="t3" icon="fa fa-pencil">
                            <open-page page-id="test" submit-operation-id="update" route="/:id/open">
                                <params>
                                    <path-param name="id" value="{id}"/>
                                </params>
                            </open-page>
                        </button>
                        <sub-menu label="Действия">
                            <menu-item id="t1" label="show-modal">
                                <show-modal page-id="test" submit-operation-id="update" route="/:id/modal">
                                    <params>
                                        <path-param name="id" value="{id}"/>
                                    </params>
                                </show-modal>
                            </menu-item>
                            <menu-item id="t4" label="open-page">
                                <open-page page-id="test" submit-operation-id="update" route="/:id/open">
                                    <params>
                                        <path-param name="id" value="{id}"/>
                                    </params>
                                </open-page>
                            </menu-item>
                        </sub-menu>
                    </toolbar>
                </extra>
            </content>
        </list>
    </regions>
</page>