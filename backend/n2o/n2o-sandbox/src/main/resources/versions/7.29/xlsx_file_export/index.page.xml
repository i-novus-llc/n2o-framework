<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      xmlns:ts="http://n2oapp.net/framework/config/schema/table-settings-1.0"
      name="Формат XLSX экспорта данных">
    <datasources>
        <datasource id="ds" query-id="data" size="5"/>
    </datasources>

    <regions>
        <table datasource="ds" selection="none">
            <columns>
                <column text-field-id="id" label="Идентификатор"/>
                <column text-field-id="id_ips" label="Идентификатор ИПС"/>
                <column text-field-id="name" label="Наименование"/>
                <column text-field-id="region" label="Регион"/>
            </columns>
            <toolbar place="topLeft">
                <ts:export default-format="xlsx" format="csv,xlsx"/>
            </toolbar>
        </table>
    </regions>
</page>
