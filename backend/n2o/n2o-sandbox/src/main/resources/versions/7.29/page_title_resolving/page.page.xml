<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Вторая страница: id={id}; name={name}"
      model="resolve"
      datasource="ds">

    <datasources>
        <datasource id="ds" query-id="data">
            <filters>
                <eq field-id="id" param="id"/>
            </filters>
        </datasource>
    </datasources>

    <regions>
        <form datasource="ds">
            <fields>
                <input-text id="id" enabled="false"/>
                <input-text id="name"
                            description="Измените значение в этом поле, чтобы увидеть изменение заголовка страницы"/>
            </fields>
        </form>
    </regions>
</page>
