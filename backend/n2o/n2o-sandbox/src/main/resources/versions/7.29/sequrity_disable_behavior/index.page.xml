<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             xmlns:sec="http://n2oapp.net/framework/config/schema/security-1.0"
             name="Блокировка элементов по sec атрибутам при отсутствии доступа">
    <form>
        <toolbar>
            <button sec:permit-all="true" sec:behavior="disable" id="btn1" label="Доступно всем"/>
            <button sec:roles="admin" sec:behavior="disable" id="btn2" label="Только с ролью admin"/>
            <button sec:permissions="edit" sec:behavior="disable" id="btn3" label="Только с правом edit"/>
            <button sec:anonymous="true" sec:behavior="disable" id="btn4" label="Только анонимам"/>
        </toolbar>
        <fields>
            <input-text sec:permit-all="true" sec:behavior="disable" id="field1" label="Доступно всем"/>
            <input-text sec:roles="admin" sec:behavior="disable" id="field2" label="Только с ролью admin"/>
            <input-text sec:permissions="edit" sec:behavior="disable" id="field3" label="Только с правом edit"/>
            <input-text sec:anonymous="true" sec:behavior="disable" id="field4" label="Только анонимам"/>
        </fields>
    </form>
</simple-page>