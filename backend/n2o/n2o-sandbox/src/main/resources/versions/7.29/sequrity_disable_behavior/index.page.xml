<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             xmlns:sec="http://n2oapp.net/framework/config/schema/security-1.0"
             name="Блокировка элементов по sec атрибутам при отсутствии доступа">
    <form>
        <toolbar>
            <button id="btn1" label="Доступно всем"
                    sec:permit-all="true" sec:behavior="disable"/>
            <button id="btn2" label="Только с ролью admin"
                    sec:roles="admin" sec:behavior="disable"/>
            <button id="btn3" label="Только с правом edit"
                    sec:permissions="edit" sec:behavior="disable"/>
            <button id="btn4" label="Только анонимам"
                    sec:anonymous="true" sec:behavior="disable"/>
        </toolbar>
        <fields>
            <hidden id="id" default-value="1"/>
            <input-text id="field1" label="Доступно всем"
                        sec:permit-all="true" sec:behavior="disable"/>
            <input-text id="field2" label="Только с ролью admin"
                        sec:roles="admin" sec:behavior="disable"/>
            <input-text id="field3" label="Только с правом edit"
                        sec:permissions="edit" sec:behavior="disable"/>
            <input-text id="field4" label="Только анонимам"
                        sec:anonymous="true" sec:behavior="disable"/>
        </fields>
    </form>
</simple-page>