<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Ячейка загрузки файлов">
    <table>
        <toolbar generate="crud"/>
        <datasource query-id="test"/>
        <columns>
            <column label="Документ" text-field-id="docs">
                <file-upload upload-url="${server.servlet.context-path}/persons/{id}/files"
                             delete-url="${server.servlet.context-path}/persons/{id}/files"
                             label-field-id="fileName" url-field-id="url"
                             request-param="file" accept=".img,.png,.xml"/>
            </column>
            <column label="Фамилия" text-field-id="surname"/>
            <column label="Имя" text-field-id="name"/>
            <column label="Отчество" text-field-id="patronymic"/>
        </columns>
    </table>
</simple-page>