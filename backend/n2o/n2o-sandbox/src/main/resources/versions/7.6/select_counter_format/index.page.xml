<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Отображение счетчика выбранных элементов в Select">
    <form>
        <fields>
            <select id="select1" type="checkboxes" select-format-one="{size} объект" select-format-few="{size} объекта" select-format-many="{size} объектов">
                <options>
                    <option name="One" id="1"/>
                    <option name="Two" id="2"/>
                    <option name="Three" id="3"/>
                    <option name="Four" id="4"/>
                    <option name="Five" id="5"/>
                </options>
            </select>
            <select id="select2" type="checkboxes" select-format="Объектов {size} шт">
                <options>
                    <option name="One" id="1"/>
                    <option name="Two" id="2"/>
                    <option name="Three" id="3"/>
                    <option name="Four" id="4"/>
                    <option name="Five" id="5"/>
                </options>
            </select>
        </fields>
    </form>
</simple-page>