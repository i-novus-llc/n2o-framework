<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Копирование данных из виджета модального окна">
    <form id="form">
        <toolbar>
            <button id="update" label="Открыть" model="filter">
                <show-modal page-id="modal" submit-label="Выбрать" submit-action-type="copy" copy-datasource="table" target-datasource="form" copy-mode="merge"/>
            </button>
        </toolbar>
        <fields>
            <input-text id="id"/>
            <input-text id="name"/>
        </fields>
    </form>
</simple-page>