<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Подсказка у IconCell">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column label="ID" text-field-id="id"/>
            <column label="Иконка" text-field-id="icon" tooltip-field-id="tooltip">
                <icon>
                    <switch value-field-id="icon">
                        <case value="download">fa fa-download</case>
                        <case value="pencil">fa fa-pencil</case>
                        <case value="plus">fa fa-plus</case>
                        <case value="trash">fa fa-trash</case>
                    </switch>
                </icon>
            </column>
        </columns>
    </table>
</simple-page>