<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Drawer">
    <form>
        <toolbar>
            <button label="Открыть слева">
                <open-drawer page-id="drawer" page-name="не должно быть крестика" placement="left" closable="false"/>
            </button>
            <button label="Открыть справа">
                <open-drawer page-id="drawer" page-name="не должно быть затемнения" placement="right" backdrop="false"/>
            </button>
            <button label="Открыть снизу">
                <open-drawer page-id="drawer" page-name="не должно закрываться при клике вне формы" placement="bottom"/>
            </button>
            <button label="Открыть сверху">
                <open-drawer page-id="drawer" page-name="размер 300х300" width="300" height="300" placement="top"/>
            </button>
        </toolbar>
        <fields>
            <hidden id="id" default-value="1"/>
        </fields>
    </form>
</simple-page>