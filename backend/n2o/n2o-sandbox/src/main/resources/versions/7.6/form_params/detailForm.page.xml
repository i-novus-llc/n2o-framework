<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Префильтрация одного поля на странице">
    <form>
        <datasource query-id="detail"/>
        <fields>
            <input-select id="gender" label="Должен быть 1 вариант: Мужской" param="gender_id" query-id="gender">
                <filters>
                    <eq field-id="id" param="gender_id"/>
                </filters>
            </input-select>
        </fields>
    </form>
</simple-page>