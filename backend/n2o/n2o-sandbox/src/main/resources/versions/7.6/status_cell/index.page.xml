<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Ячейка-статус">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column label="ID" text-field-id="id"/>
            <column label="Название" text-field-id="name"/>
            <column label="Статус" text-field-id="status">
                <badge src="StatusCell">
                    <switch value-field-id="status">
                        <case value="New">success</case>
                        <case value="In Progress">info</case>
                        <case value="Blocked">danger</case>
                    </switch>
                </badge>
            </column>
        </columns>
    </table>
</simple-page>