<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Фильтры в столбцах таблицы">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column label="Идентификатор" text-field-id="id"/>
            <filter-column label="Имя" text-field-id="name">
                <filter>
                    <input-text id="name"/>
                </filter>
            </filter-column>
            <filter-column label="Дата рождения" text-field-id="birthday">
                <filter>
                    <date-interval id="birthday"/>
                </filter>
                <cell>
                    <badge/>
                </cell>
            </filter-column>
        </columns>
    </table>
</simple-page>