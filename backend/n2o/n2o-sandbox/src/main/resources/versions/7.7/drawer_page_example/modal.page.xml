<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Информация о заявлении">
    <form>
        <datasource query-id="test">
            <filters>
                <eq field-id="id" param="id"/>
            </filters>
        </datasource>
        <fields>
            <input-text id="id" enabled="false" label="ID"/>
            <input-text id="name" enabled="false" label="Наименование"/>
            <checkbox id="inProgress" enabled="false" label="Взято в работу"/>
        </fields>
    </form>
</simple-page>