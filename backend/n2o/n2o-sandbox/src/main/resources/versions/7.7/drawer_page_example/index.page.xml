<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Перевод статуса в Drawer странице">
    <table>
        <datasource query-id="test"/>
        <rows>
            <click>
                <open-drawer page-id="drawer" route="/:id/actions">
                    <params>
                        <path-param name="id" value="{id}"/>
                    </params>
                </open-drawer>
            </click>
        </rows>
        <columns>
            <column label="ID" text-field-id="id"/>
            <column label="Наименование" text-field-id="name"/>
            <column label="Взято в работу" text-field-id="inProgress">
                <checkbox/>
            </column>
        </columns>
    </table>
</simple-page>