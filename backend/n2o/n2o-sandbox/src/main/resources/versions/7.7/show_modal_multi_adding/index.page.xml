<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Мульти добавление через модальное окно">
    <form id="form">
        <toolbar>
            <button label="Выбрать" model="filter">
                <show-modal page-id="modal" submit-label="Выбрать" submit-action-type="copy" copy-model="multi" target-field-id="members" copy-mode="add"/>
            </button>
        </toolbar>
        <fields>
            <multi-set id="members" can-add="false" can-remove="false">
                <row>
                    <input-text id="id"/>
                    <input-text id="name"/>
                </row>
            </multi-set>
        </fields>
    </form>
</simple-page>