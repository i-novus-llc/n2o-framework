<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Название и описание у ячейки с картинкой">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column text-field-id="id"/>
            <column label="image" text-field-id="url">
                <image width="80px" title="{title}" description="{desc}"/>
            </column>
        </columns>
    </table>
</simple-page>