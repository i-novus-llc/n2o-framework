<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Тестовая форма">
    <form id="form">
        <toolbar place="bottomLeft">
            <button label="Очистить поле" datasource="form">
                <clear/>
            </button>
            <button label="Очистить поле и закрыть форму" datasource="form">
                <clear close-on-success="true"/>
            </button>
        </toolbar>
        <fields>
            <input-text id="value"/>
        </fields>
    </form>
</simple-page>