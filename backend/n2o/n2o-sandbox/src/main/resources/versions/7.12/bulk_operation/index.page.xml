<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Bulk Операции">
    <table selection="checkbox">
        <toolbar>
            <button label="Изменить выбранные" model="multi">
                <show-modal page-id="setName" submit-operation-id="updateMany" route="/updateAll">
                    <params>
                        <query-param name="ids" value="{this*.id}"/>
                    </params>
                </show-modal>
            </button>
            <button label="Удалить выбранные" model="multi">
                <invoke operation-id="deleteMany"/>
            </button>
        </toolbar>
        <datasource query-id="test" object-id="test"/>
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="name"/>
        </columns>
    </table>
</simple-page>