<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0">
    <operations>
        <operation id="errorGraphQl">
            <invocation>
                <graphql endpoint="${n2o.engine.graphql.endpoint}">
                    mutation MyMutation {
                        deleteCar(filter: {id: $$id}) {
                            Car {
                                id
                            }
                        }
                    }
                </graphql>
            </invocation>
            <in>
                <field id="id"/>
            </in>
        </operation>

        <operation id="errorSql">
            <invocation>
                <sql>INSERT INTO car (id, name, price) VALUES (null, :name, :price);</sql>
            </invocation>
            <in>
                <field id="name"/>
                <field id="price"/>
            </in>
        </operation>

        <operation id="errorRest">
            <invocation>
                <rest method="PUT">/data/car/{id}</rest>
            </invocation>
            <in>
                <field id="id"/>
                <field id="name"/>
                <field id="price"/>
            </in>
        </operation>

    </operations>
</object>
