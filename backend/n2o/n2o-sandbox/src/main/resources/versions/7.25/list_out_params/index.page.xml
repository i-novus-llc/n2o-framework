<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Вложенные поля в out параметрах операции">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="name" label="Простое"/>
            <column text-field-id="org.name" label="Ссылка"/>
            <column text-field-id="departments" label="Список">
                <list label-field-id="name"/>
            </column>
        </columns>
        <toolbar>
            <button label="Показать информацию" description="В алерте должны показаться данные выбранной строки таблицы">
                <invoke operation-id="getInfo"/>
            </button>
        </toolbar>
    </table>
</simple-page>
