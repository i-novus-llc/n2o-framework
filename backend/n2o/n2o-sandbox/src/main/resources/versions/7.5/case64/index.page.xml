<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Управление параметрами фильтров.
             Выбрать фильтры и проверить какие параметры попали в URL">
    <table id="main">
        <datasource query-id="test">
            <filters>
                <eq field-id="id" param="id" routable="true" value="{id}" datasource="main" model="filter"/>
                <eq field-id="ref.id" param="refId" routable="true" value="{ref.id}" datasource="main" model="filter"/>
                <eq field-id="name" param="name" routable="true" value="{name}" datasource="main" model="filter"/>
            </filters>
        </datasource>
        <columns>
            <column label="ID" text-field-id="id"/>
            <column label="Ссылка" text-field-id="ref.name"/>
            <column label="Имя" text-field-id="name"/>
        </columns>
        <filters>
            <input-text id="id" label="ID" domain="integer"/>
            <input-select id="ref" label="Ссылка">
                <options>
                    <option name="Один" id="1"/>
                    <option name="Два" id="2"/>
                </options>
            </input-select>
            <input-text id="name" label="Имя" domain="string"/>
        </filters>
    </table>
</simple-page>