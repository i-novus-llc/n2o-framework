<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Opened page">
    <form>
        <toolbar>
            <button label="Открыть" description="При нажатии пропадает параметр sid=1 из адресной строки">
                <open-page page-id="modal">
                    <datasources>
                        <datasource default-values-mode="query">
                            <filters>
                                <eq field-id="id" param="$widgetId_id" value="{id}"/>
                                <eq field-id="type" param="sid" value="{type}"/>
                            </filters>
                        </datasource>
                    </datasources>
                    <params>
                        <query-param name="$widgetId_id" value="{id}"/>
                    </params>
                </open-page>
            </button>
        </toolbar>
        <datasource query-id="test"/>
        <fields>
            <input-text id="id"/>
            <input-text id="name"/>
            <input-text id="type"/>
        </fields>
    </form>
</simple-page>