<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Режим optimistic запросов на сервер">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column id="c1" label="Без optimistic" text-field-id="check1">
                <checkbox>
                    <invoke operation-id="update"/>
                </checkbox>
            </column>
            <column id="c2" label="C optimistic" text-field-id="check2">
                <checkbox>
                    <invoke operation-id="update" optimistic="true"/>
                </checkbox>
            </column>
        </columns>
    </table>
</simple-page>