<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Тестирование fetch-value на форме">
    <form>
        <fields>
            <input-text id="value" label="Тестирование fetch-value на форме. Введите id" domain="integer"/>
            <input-text id="name" label="Должно появиться имя">
                <dependencies>
                    <fetch-value on="value" apply-on-init="false" query-id="test" value-field-id="name">
                        <filters>
                            <eq field-id="id" value="{value}"/>
                        </filters>
                    </fetch-value>
                </dependencies>
            </input-text>
        </fields>
    </form>
</simple-page>