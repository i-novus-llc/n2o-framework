<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Кейс проверки фильтрации виджетов с одной query на одной странице">
    <regions>
        <table>
            <datasource query-id="test"/>
            <rows>
                <click>
                    <open-page page-id="open" route="/:id/open">
                        <params>
                            <path-param name="id" value="{id}"/>
                        </params>
                    </open-page>
                </click>
            </rows>
            <columns>
                <column label="Кликните на строке и откроется новая страница" text-field-id="name"/>
            </columns>
            <filters>
                <input-select id="surname" label="Фильтр по имени(нужно в будущем убрать)" query-id="inputSelect"/>
            </filters>
        </table>
    </regions>
</page>