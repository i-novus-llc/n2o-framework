<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Badge в филдсетах">
    <form>
        <fields>
            <row>
                <input-text id="name" default-value="Бадж"/>
                <radio-group id="color" inline="true">
                    <default-value id="2"/>
                    <options>
                        <option id="0" name="primary"/>
                        <option id="1" name="secondary"/>
                        <option id="2" name="info"/>
                        <option id="3" name="danger"/>
                        <option id="4" name="warning"/>
                        <option id="5" name="success"/>
                    </options>
                </radio-group>
            </row>

            <line label="line"
                  badge="{name}"
                  badge-color="{color.name}"
                  badge-shape="rounded"
                  badge-position="left"/>

            <set label="set"
                 badge="{name}"
                 badge-color="{color.name}"
                 badge-shape="rounded"
                 badge-position="left"/>

            <multi-set id="multi"
                       label="multi"
                       badge="{name}"
                       badge-color="{color.name}"
                       badge-shape="rounded"
                       badge-position="left">
                <set/>
            </multi-set>
        </fields>
    </form>
</simple-page>