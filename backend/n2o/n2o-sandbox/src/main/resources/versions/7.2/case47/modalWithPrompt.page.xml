<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Если данные изменены, то при нажатии 'Закрыть' появится предупреждение" object-id="test">
    <regions>
        <form id="form" unsaved-data-prompt="true">
            <datasource query-id="test">
                <filters>
                    <eq field-id="id" param="id"/>
                </filters>
            </datasource>
            <fields>
                <input-text id="name"/>
                <checkbox id="type"/>
            </fields>
        </form>
    </regions>
</page>