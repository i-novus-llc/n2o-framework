<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0">
    <operations>
        <operation id="create">
            <invocation>
                <test file="tree.json" operation="create"/>
            </invocation>
            <in>
                <field id="name"/>
                <field id="parent"/>
            </in>
        </operation>

        <operation id="update">
            <invocation>
                <test file="tree.json" operation="update"/>
            </invocation>
            <in>
                <field id="id"/>
                <field id="name"/>
                <field id="parent"/>
            </in>
        </operation>

        <operation id="delete">
            <invocation>
                <test file="tree.json" operation="delete"/>
            </invocation>
            <in>
                <field id="id"/>
            </in>
        </operation>
    </operations>
</object>