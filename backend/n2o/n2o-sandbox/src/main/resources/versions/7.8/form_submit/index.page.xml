<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Автоматическое сохранение формы">
    <form>
        <datasource query-id="test" object-id="test">
            <submit operation-id="update" auto-submit-on="change"/>
        </datasource>
        <fields>
            <input-text id="name" label="Имя"/>
            <select id="gender" label="Пол">
                <options>
                    <option name="Мужской" id="m"/>
                    <option name="Женский" id="w"/>
                </options>
            </select>
            <date-interval id="vacation" label="Даты отпуска"/>
        </fields>
    </form>
</simple-page>