<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="MongoDb один ко многим с редиректом">
    <table>
        <toolbar>
            <button id="create" label="Создать" model="filter">
                <show-modal page-id="personCreate" submit-operation-id="create" redirect-url-after-submit="/:id/update">
                    <datasources>
                        <datasource default-values-mode="defaults"/>
                    </datasources>
                </show-modal>
            </button>
            <button id="update" label="Изменить">
                <open-page page-id="person" route="/:person_id/update">
                    <params>
                        <path-param name="person_id" value="{id}"/>
                    </params>
                </open-page>
            </button>
            <button id="delete" label="Удалить">
                <invoke operation-id="delete"/>
            </button>
        </toolbar>
        <datasource query-id="person"/>
        <columns>
            <column label="ID" text-field-id="id"/>
            <column label="Имя" text-field-id="name"/>
        </columns>
    </table>
</simple-page>