<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" object-id="person">
    <toolbar>
        <button id="update" label="Сохранить" model="resolve" datasource="person" visible="{typeof id != 'undefined' &amp;&amp; id != null}" validate="true">
            <invoke refresh-datasources="person" operation-id="update">
                <form-param id="id" value="{id}" datasource="person" model="edit"/>
                <form-param id="name" value="{name}" datasource="person" model="edit"/>
                <form-param id="age" value="{age}" datasource="person" model="edit"/>
            </invoke>
        </button>
        <button id="close" label="Закрыть" model="edit" datasource="person">
            <close/>
        </button>
    </toolbar>
    <regions>
        <form id="person" mode="two-models">
            <datasource query-id="person">
                <filters>
                    <eq field-id="id" param="person_id"/>
                </filters>
            </datasource>
            <fields>
                <input-text id="name" label="Имя"/>
                <input-text id="age" label="Возраст"/>
            </fields>
        </form>
        <tabs>
            <tab name="Адреса">
                <table id="address">
                    <toolbar>
                        <button id="create" label="Создать" model="filter">
                            <show-modal page-id="address" submit-operation-id="create">
                                <datasources>
                                    <datasource default-values-mode="defaults"/>
                                </datasources>
                                <params>
                                    <query-param name="person_id" value="{id}" datasource="person" model="resolve"/>
                                </params>
                            </show-modal>
                            <dependencies>
                                <enabling datasource="person" model="resolve">id != null</enabling>
                            </dependencies>
                        </button>
                        <button id="update" label="Изменить" model="resolve">
                            <show-modal page-id="address" submit-operation-id="update" route="/addresses/:address_id/update">
                                <datasources>
                                    <datasource default-values-mode="query"/>
                                </datasources>
                                <params>
                                    <path-param name="address_id" value="{id}"/>
                                </params>
                            </show-modal>
                        </button>
                        <button id="delete" label="Удалить">
                            <invoke operation-id="delete" route="/addresses/delete"/>
                        </button>
                    </toolbar>
                    <datasource query-id="address">
                        <dependencies>
                            <fetch on="person" model="resolve"/>
                        </dependencies>
                        <filters>
                            <eq field-id="person.id" value="{id}" datasource="person" model="resolve" required="true"/>
                        </filters>
                    </datasource>
                    <columns>
                        <column text-field-id="name"/>
                    </columns>
                </table>
            </tab>
            <tab name="Работа">
                <table id="jobs">
                    <toolbar>
                        <button id="create" label="Создать" model="filter">
                            <show-modal page-id="jobs" submit-operation-id="create" route="/jobs/create">
                                <datasources>
                                    <datasource default-values-mode="defaults"/>
                                </datasources>
                                <params>
                                    <query-param name="person_id" value="{id}" datasource="person" model="resolve"/>
                                </params>
                            </show-modal>
                            <dependencies>
                                <enabling datasource="person" model="resolve">id != null</enabling>
                            </dependencies>
                        </button>
                        <button id="update" label="Изменить" model="resolve">
                            <show-modal page-id="jobs" submit-operation-id="update" route="/jobs/:job_id/update">
                                <datasources>
                                    <datasource default-values-mode="query"/>
                                </datasources>
                                <params>
                                    <path-param name="job_id" value="{id}"/>
                                </params>
                            </show-modal>
                        </button>
                        <button id="delete" label="Удалить">
                            <invoke operation-id="delete" route="/jobs/delete"/>
                        </button>
                    </toolbar>
                    <datasource query-id="jobs">
                        <dependencies>
                            <fetch on="person" model="resolve"/>
                        </dependencies>
                        <filters>
                            <eq field-id="person.id" value="{id}" datasource="person" model="resolve" required="true"/>
                        </filters>
                    </datasource>
                    <columns>
                        <column text-field-id="name"/>
                    </columns>
                </table>
            </tab>
        </tabs>
    </regions>
</page>