<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <calendar id="calendar" default-date="2020-07-07T00:00:00" default-view="month" views="month,day,agenda,week,workWeek"
              min-time="08:00:00" max-time="20:00:00" title-field-id="title" tooltip-field-id="tooltip" start-field-id="start"
              end-field-id="end" cell-color-field-id="color" disabled-field-id="disabled">
        <datasource query-id="test"/>
        <resources value-field-id="resourceId">
            <resource id="1" title="Конференц зал"/>
            <resource id="2" title="Переговорка"/>
        </resources>
        <action-on-select-slot>
            <show-modal page-id="createEvent" submit-operation-id="create" object-id="test" route="/create">
                <datasources>
                    <datasource default-values-mode="defaults"/>
                </datasources>
                <params>
                    <query-param name="start" value="{start}"/>
                    <query-param name="end" value="{end}"/>
                    <query-param name="resourceId" value="{resourceId}"/>
                </params>
            </show-modal>
        </action-on-select-slot>
        <action-on-select-event>
            <show-modal page-id="selectEvent" submit-operation-id="update" object-id="test" route="/:id/update">
                <params>
                    <path-param name="id" value="{id}"/>
                </params>
            </show-modal>
        </action-on-select-event>
    </calendar>
</simple-page>