<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <regions>
        <form id="person">
            <datasource query-id="person">
                <filters>
                    <eq field-id="id" param="person_id"/>
                </filters>
            </datasource>
            <fields>
                <input-text id="name" label="Имя"/>
            </fields>
        </form>
        <table id="address">
            <toolbar>
                <button id="create" label="Создать" model="filter">
                    <show-modal page-id="address" submit-operation-id="create" route="/address/create">
                        <datasources>
                            <datasource default-values-mode="defaults"/>
                        </datasources>
                        <params>
                            <query-param name="person_id" value="{id}" datasource="person" model="resolve"/>
                        </params>
                    </show-modal>
                    <dependencies>
                        <enabling datasource="person" model="resolve">id != null</enabling>
                    </dependencies>
                </button>
                <button id="update" label="Изменить" model="resolve">
                    <show-modal page-id="address" submit-operation-id="update" route="/address/:address_id/update">
                        <datasources>
                            <datasource default-values-mode="query"/>
                        </datasources>
                        <params>
                            <path-param name="address_id" value="{id}"/>
                        </params>
                    </show-modal>
                </button>
                <button id="delete" label="Удалить">
                    <invoke operation-id="delete" route="/address/delete"/>
                </button>
            </toolbar>
            <datasource query-id="address">
                <dependencies>
                    <fetch on="person" model="resolve"/>
                </dependencies>
                <filters>
                    <eq field-id="person.id" value="{id}" datasource="person" model="resolve" required="true"/>
                </filters>
            </datasource>
            <columns>
                <column text-field-id="name"/>
            </columns>
        </table>
    </regions>
</page>