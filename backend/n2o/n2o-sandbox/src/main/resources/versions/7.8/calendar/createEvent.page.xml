<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Создание события">
    <form>
        <datasource object-id="test"/>
        <fields>
            <input-text id="title" label="Название события"/>
            <date-interval id="date" label="Дата" begin-param="start"
                           end-param="end" time-format="HH:mm:ss"/>
            <radio-group id="resource" required="true" label="Ресурс" param="resourceId">
                <options>
                    <option name="Конференц зал" id="1"/>
                    <option name="Переговорка" id="2"/>
                </options>
            </radio-group>
        </fields>
    </form>
</simple-page>