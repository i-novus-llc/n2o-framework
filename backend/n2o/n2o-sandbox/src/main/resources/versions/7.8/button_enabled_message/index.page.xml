<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Подсказка на кнопке по условию недоступности">
    <form>
        <toolbar place="bottomLeft">
            <button label="Сохранить" description="Отправка значения">
                <dependencies>
                    <enabling message="Не заполнено имя">name != null</enabling>
                </dependencies>
            </button>
            <button label="Сохранить2">
                <dependencies>
                    <enabling message="Вам недостаточно лет">age &gt;= 18</enabling>
                </dependencies>
            </button>
        </toolbar>
        <fields>
            <row>
                <input-text id="name" label="Имя"/>
                <input-text id="age" label="Возраст" domain="integer"/>
            </row>
        </fields>
    </form>
</simple-page>