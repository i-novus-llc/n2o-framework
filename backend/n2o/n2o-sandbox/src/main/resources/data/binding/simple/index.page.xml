<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Связывание простого поля">
    <form id="form">
        <datasource query-id="user"/>
        <fields>
            <hidden id="id" default-value="1"/>
            <input-text id="firstName" label="Наименование"/>
        </fields>
        <toolbar place="bottomLeft">
            <button id="create" label="Создать">
                <invoke operation-id="create"/>
            </button>
        </toolbar>
    </form>
</simple-page>
