<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Связывание спискового поля">
    <form id="form">
        <datasource query-id="user"/>
        <fields>
            <hidden id="id" default-value="1"/>
            <select id="gender" label="Пол">
                <options>
                    <option id="1" name="Мужской"/>
                    <option id="2" name="Женский"/>
                </options>
            </select>
        </fields>
        <toolbar place="bottomLeft">
            <button id="create" label="Создать">
                <invoke operation-id="create"/>
            </button>
        </toolbar>
    </form>
</simple-page>
