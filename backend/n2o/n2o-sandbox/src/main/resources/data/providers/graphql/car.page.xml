<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form>
        <datasource query-id="car" object-id="car"/>
        <fields>
            <input-text id="name" label="Наименование" required="true"/>
            <input-text id="price" label="Цена" required="true"/>
            <input-select id="showrooms" type="multi" label="Автосалоны">
                <options>
                    <option id="1" name="showroom1"/>
                    <option id="2" name="showroom2"/>
                    <option id="3" name="showroom3"/>
                    <option id="4" name="showroom4"/>
                </options>
            </input-select>
        </fields>
    </form>
</simple-page>