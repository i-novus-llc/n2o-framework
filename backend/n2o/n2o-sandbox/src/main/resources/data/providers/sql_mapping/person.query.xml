<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="person">
    <list result-mapping="#this">
        <sql>
            SELECT :select
            FROM persons p
            WHERE :filters
            LIMIT :limit OFFSET :offset
        </sql>
    </list>
    <count count-mapping="[0]['cnt']">
        <sql>
            SELECT count(*) as cnt
            FROM persons p
        </sql>
    </count>

    <fields>
        <field id="id">
            <select>id</select>
            <filters>
                <eq filter-id="id" mapping="['id']">id=:id</eq>
            </filters>
        </field>

        <field id="name">
            <!--маппинг поля БД first_name в поле на клиенте name-->
            <select mapping="['first_name']">p.first_name as first_name</select>
            <!--маппинг определяет ключ "fname" в который будет скопировано значение фильтра "name"-->
            <filters>
                <like filter-id="name" mapping="['fname']">
                    p.first_name like '%'||:fname||'%'
                </like>
            </filters>
        </field>
    </fields>
</query>

