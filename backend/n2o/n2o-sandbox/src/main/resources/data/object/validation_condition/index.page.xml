<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Валидация на месте">
    <form id="form">
        <datasource object-id="myObject"/>
        <fields>
            <alert id="message" color="info" text="Для вызова валидации введите дату в будущем"/>
            <date-time id="birthday" label="Дата рождения"/>
        </fields>
        <toolbar place="bottomLeft">
            <button id="create" label="Создать">
                <invoke operation-id="create"/>
            </button>
        </toolbar>
    </form>
</simple-page>