        <xs:complexContent>
            <xs:extension base="fs:fields">
                <xs:attribute name="place" type="filterPlaceEnum">
                    <xs:annotation>
                        <xs:documentation>Позиция фильтров.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="search-on-change" type="xs:boolean" default="false">
                    <xs:annotation>
                        <xs:documentation>Запускать фильтрацию по мере ввода.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <!--положение панели фильтров-->
    <xs:simpleType name="filterPlaceEnum">
        <xs:restriction base="xs:string">
            <!--не задано-->
            <xs:enumeration value="top"/>
            <!--по возрастанию-->
            <xs:enumeration value="left"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="sizeEnum">
        <xs:restriction base="xs:string">
            <!--не задано-->
            <xs:enumeration value="sm"/>
            <!--по возрастанию-->
            <xs:enumeration value="lg"/>
        </xs:restriction>
    </xs:simpleType>


