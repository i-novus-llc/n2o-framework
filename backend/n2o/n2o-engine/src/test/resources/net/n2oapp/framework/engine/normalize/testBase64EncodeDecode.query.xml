<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-5.0">

    <unique>
        <test file="net/n2oapp/framework/engine/normalize/testBase64EncodeDecode.json" operation="findOne"/>
    </unique>

    <fields>
        <field id="id"/>
        <field id="encoded" mapping="['text']" normalize="#encodeToBase64(#this)"/>
        <field id="decoded" mapping="['base64']" normalize="#decodeFromBase64(#this)"/>
    </fields>
</query>
