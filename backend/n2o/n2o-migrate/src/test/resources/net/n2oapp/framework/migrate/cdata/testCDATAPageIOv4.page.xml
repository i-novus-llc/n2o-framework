<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">

    <regions>
        <html>
            <content>
                <![CDATA[
                    <div class='test'><h3 class='class1' style='color:red;'>Hello, {name}!</h3></div>
                ]]>
            </content>
        </html>
        <html>
            <content>
                <![CDATA[
        <div class='jumbotron'><h4>user:{}{digit key 125}{there is no such key} {username} {surname} / username: {username} / surname: {surname}</h4></div><div class='jumbotron'><ul><li>{username}</li><li>{surname}{test-key}</li></ul></div><div class='jumbotron'>{html}</div>
    ]]>
            </content>
        </html>
        <form>
            <datasource query-id="test"/>
            <fields>
                <input-text id="name" required="true">
                    <dependencies>
                        <set-value on="type">
                            <![CDATA[
                            if (type && type.id === 2) {
                                return null;
                            } else {
                                return {anotherName};
                            }
                        ]]>
                        </set-value>
                        <enabling on="type">
                            <![CDATA[
                            return type && type.id === 2
                        ]]>
                        </enabling>
                    </dependencies>
                </input-text>
            </fields>
        </form>
    </regions>
</page>