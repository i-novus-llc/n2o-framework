<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0">
    <operations>
        <operation id="create">
            <invocation>
                <test file="net/n2oapp/framework/autotest/datasources/datasource/validation_many_form/data.json" operation="create"/>
            </invocation>
            <in>
                <field id="name"/>
                <field id="birthday"/>
            </in>
            <out>
                <field id="id"/>
            </out>
            <validations white-list="uniqueName,dateInPast"/>
        </operation>
    </operations>
    <validations>
        <constraint id="uniqueName" severity="danger"
                    message="Имя {name} уже существует"
                    result="#this == null">
            <invocation>
                <test file="net/n2oapp/framework/autotest/datasources/datasource/validation_many_form/data.json" operation="findOne"/>
            </invocation>
            <in>
                <field id="name"/>
            </in>
        </constraint>
        <condition id="dateInPast" severity="danger" on="birthday"
                   message="Дата рождения не может быть в будущем">
            <![CDATA[
                    typeof birthday == 'undefined' || Date.parse(birthday) <= Date.now()
            ]]>
        </condition>
    </validations>
</object>
