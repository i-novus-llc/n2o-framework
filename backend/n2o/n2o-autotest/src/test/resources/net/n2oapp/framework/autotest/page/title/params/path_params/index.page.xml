<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
      name="Start page">
    <regions>
        <table query-id="test" id="master">
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="name"/>
                <column text-field-id="type"/>
            </columns>
            <toolbar>
                <button label="Open page">
                    <open-page page-id="page" route="/:id/bread">
                        <path-param name="id" value="{id}"/>
                    </open-page>
                </button>
                <button label="Modal">
                    <show-modal page-id="page" route="/:id/modal">
                        <path-param name="id" value="{id}"/>
                    </show-modal>
                </button>
            </toolbar>
        </table>

        <form depends-on="master" detail-field-id="id" query-id="test" route="/:master_id/detail">
            <fields>
                <input-text id="name" enabled="false"/>
            </fields>
            <toolbar place="bottomLeft">
                <button label="Open page from master" widget-id="master">
                    <open-page page-id="page" route="/:id/bread2">
                        <path-param name="id" value="{id}"/>
                    </open-page>
                </button>
                <button label="Modal from detail">
                    <show-modal page-id="page" route="/:id/modal2">
                        <path-param name="id" value="{id}"/>
                    </show-modal>
                </button>
            </toolbar>
        </form>
    </regions>
</page>
