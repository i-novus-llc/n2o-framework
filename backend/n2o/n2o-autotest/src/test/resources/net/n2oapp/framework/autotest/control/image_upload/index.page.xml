<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0" name="Страница загрузки изображений"
             route="/pageRoute">
    <form query-id="files">
        <fields>
            <image-upload label="imageUpload1" id="files"
                          label-field-id="fileName" value-field-id="id" url-field-id="url"
                          upload-url="/files"
                          delete-url="/files"
            />

            <image-upload label="imageUpload2" id="files"
                          label-field-id="fileName" value-field-id="id" url-field-id="url"
                          upload-url="/files"
                          delete-url="/files"
                          accept=".png"
                          list-type="card"
                          icon="fa fa-plus" icon-size="100"
                          width="200" height="200"
                          shape="circle"
                          can-lightbox="true" can-delete="false"
                          show-name="true"
            />

            <image-upload label="imageUpload3" id="files" multi="true"
                          label-field-id="fileName" value-field-id="id" url-field-id="url"
                          upload-url="/files"
                          delete-url="/files"
                          can-lightbox="true"
            />
        </fields>
    </form>
</simple-page>
