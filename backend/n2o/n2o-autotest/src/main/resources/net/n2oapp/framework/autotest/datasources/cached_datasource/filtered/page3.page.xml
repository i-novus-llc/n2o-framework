<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="page3">
    <datasources>
        <parent-datasource id="parentDs"/>

        <datasource id="ds" query-id="test">
            <filters>
                <eq field-id="id" value="{id}" datasource="parentDs"/>
            </filters>
        </datasource>

        <cached-datasource id="cds" storage-key="NNO-11391-v3"
                           query-id="test">
            <filters>
                <eq field-id="id" value="{id}" datasource="parentDs"/>
            </filters>
        </cached-datasource>
    </datasources>

    <regions>
        <form datasource="ds">
            <fields>
                <input-text id="name" label="name (datasource)"/>
            </fields>
        </form>
        <form datasource="cds">
            <fields>
                <input-text id="name" label="name (cached-datasource)"/>
            </fields>
        </form>
    </regions>
</page>
