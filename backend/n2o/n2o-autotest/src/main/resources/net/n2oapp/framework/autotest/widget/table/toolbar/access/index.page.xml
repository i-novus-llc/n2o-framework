<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" xmlns:sec="http://n2oapp.net/framework/config/schema/security-1.0" name="Доступ к колонкам по sec атрибутам">
    <table id="list">
        <datasource query-id="test"/>
        <columns>
            <column text-field-id="Имя"/>
            <column label="Доступно с ролью admin" sec:roles="admin">
                <toolbar>
                    <button sec:roles="admin" label="Удалить" icon="fa fa-trash"/>
                </toolbar>
            </column>
            <column label="Доступно с правом edit" text-field-id="id" sec:permissions="edit">
                <toolbar>
                    <button sec:permissions="edit" id="archive" label="Редактировать" icon="fa fa-edit"/>
                </toolbar>
            </column>
        </columns>
    </table>
</simple-page>