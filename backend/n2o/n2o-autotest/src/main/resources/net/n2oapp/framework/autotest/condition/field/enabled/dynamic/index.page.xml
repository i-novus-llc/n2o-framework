<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0">
    <form>
        <fields>
            <row>
                <radio-group id="field_enabled">
                    <options>
                        <option id="1" name="enabled"/>
                        <option id="2" name="disabled"/>
                    </options>
                    <default-value id="1" name="enabled"/>
                </radio-group>
            </row>
            
            <row>
                <input-text id="fieldset_field_enable_0" label="InputText"
                            default-value="Поле доступно, если выбрано 1"
                            enabled="{field_enabled.id === 1}"/>
            </row>
        </fields>
    </form>
</simple-page>
