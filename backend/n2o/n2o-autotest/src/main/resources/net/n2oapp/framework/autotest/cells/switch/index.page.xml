<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0">
    <table query-id="testTable">
        <columns>
            <column text-field-id="name">
                <switch value-field-id="id">
                    <case value="1">
                        <badge color="info"/>
                    </case>
                    <case value="2">
                        <icon icon="fa fa-plus" type="iconAndText"/>
                    </case>
                    <case value="3">
                        <checkbox/>
                    </case>
                    <default>
                        <text/>
                    </default>
                </switch>
            </column>
        </columns>
    </table>
</simple-page>