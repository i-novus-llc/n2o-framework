<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Страница для автотеста проверяющего обновление родительского индекса после удаления элемента">
    <form>
        <fields>
            <multi-set id="multi" can-add="true" can-remove="true" can-remove-first="true">
                <output-text id="id" label="{index}">
                    <dependencies>
                        <set-value on="multi">
                            return index
                        </set-value>
                    </dependencies>
                </output-text>
            </multi-set>
        </fields>
    </form>
</simple-page>