<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <datasources>
        <datasource id="medicalReportFormDs" query-id="medicalReports">
            <filters>
                <eq field-id="id" param="reportId"/>
            </filters>
        </datasource>
        <datasource id="personDs" query-id="person">
            <filters>
                <eq field-id="id" param="reportId"/>
            </filters>
        </datasource>
    </datasources>
    <regions>
        <tabs lazy="false">
            <tab id="documentDetails" name="Сведения о документе">
                <form datasource="medicalReportFormDs">
                    <fields>
                        <input-text id="name" label="Наименование документа" required="true"/>
                    </fields>
                </form>
            </tab>
            <tab id="person" name="Сведения о пациенте">
                <form datasource="personDs">
                    <fields>
                        <input-text id="lastname" label="Фамилия" required="true"/>
                        <input-text id="firstname" label="Имя">
                            <dependencies>
                                <requiring on="lastname">lastname</requiring>
                            </dependencies>
                        </input-text>
                    </fields>
                </form>
            </tab>
        </tabs>
    </regions>
</page>
