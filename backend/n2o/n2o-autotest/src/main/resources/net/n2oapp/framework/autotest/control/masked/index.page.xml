<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Название страницы" route="/pageRoute">
    <form>
        <datasource object-id="test" query-id="test"/>
        <fields>
            <masked-input class="n2o" id="masked" label="MaskedInput" placeholder="+7 (___) ___-__-__"
                          mask="+7 (999) 999-99-99" measure="тел."/>
            <masked-input id="maskedWithoutClear" label="MaskedInputWithoutClear" mask="+7 (999) 999-99-99"
                          clear-on-blur="false"/>
            <masked-input id="mask" label="MaskedInputToSave" mask="99-99"
                          clear-on-blur="false"
                          invalid-text="Невалидный формат данных"
                          placeholder="Введите числа в формате xx-xx"
                          required="true"/>
        </fields>
        <toolbar place="bottomLeft">
            <button label="Сохранить" disable-on-empty-model="false">
                <invoke operation-id="submit"/>
            </button>
        </toolbar>
    </form>
</simple-page>