<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0" name="popover">
    <form object-id="myObject">
        <fields>
            <hidden id="id" default-value="1"/>
        </fields>
        <toolbar place="bottomLeft">
            <button label="popover" confirm="true" confirm-text="confirm-text"
                    confirm-type="popover">
                <invoke operation-id="echo"/>
            </button>
            <button label="CustomPopover" confirm="true" confirm-text="Going to hell?"
                    confirm-type="popover" confirm-cancel-label="No no no" confirm-ok-label="Hell, yes" confirm-title="burn">
                <invoke operation-id="echo"/>
            </button>
            <button label="dialog" confirm="true" confirm-text="confirm-text">
                <invoke operation-id="echo"/>
            </button>
        </toolbar>
    </form>
</simple-page>