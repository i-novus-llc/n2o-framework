<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Валидация невидимых полей">
    <form>
        <datasource object-id="test"/>
        <toolbar>
            <button label="Валидировать" validate="true" disable-on-empty-model="false">
                <invoke operation-id="echo"/>
            </button>
        </toolbar>
        <fields>
            <radio-group id="type" label="Родительское поле">
                <options>
                    <option name="Скрыть поля" id="1"/>
                    <option name="Показать поля" id="2"/>
                </options>
            </radio-group>
            <input-text id="test1" required="true" label="Дочернее поле">
                <dependencies>
                    <visibility on="type">type.id==2</visibility>
                </dependencies>
            </input-text>
            <set visible="{type.id==2}" depends-on="type">
                <input-text id="test2" required="true" label="Дочернее поле в невидимом филдсете"/>
            </set>
            <set visible="{type.id==2}" depends-on="type">
                <set>
                    <input-text id="test3" required="true" label="Дочернее поле в невидимом филдсете в филдсете"/>
                </set>
            </set>
        </fields>
    </form>
</simple-page>