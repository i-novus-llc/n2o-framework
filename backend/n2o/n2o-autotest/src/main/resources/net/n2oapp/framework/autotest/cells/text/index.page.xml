<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Страница для автотеста по проверке ячейки с текстом" route="/pageRoute">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="cell1">
                <text subtext-field-id="sub" subtext-format="number 0.0" icon="fa fa-plus" icon-position="right"/>
            </column>
            <column text-field-id="cell2">
                <text format="number 0.00" icon="fa fa-plus"/>
            </column>
        </columns>
    </table>
</simple-page>
