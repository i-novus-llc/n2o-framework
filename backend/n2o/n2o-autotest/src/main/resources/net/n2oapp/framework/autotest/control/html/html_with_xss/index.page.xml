<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
        name="Автотесты xss, проверяющий места возможной вставки html на xss уязвимости">
    <datasources>
        <datasource id="test" query-id="test"/>
    </datasources>
    <regions>
        <html datasource="test">
            <content>
                <![CDATA[
                    <div class='test'><h3 class='class1'>Widget {firstName}</h3></div>
                ]]>
            </content>
        </html>
        <form datasource="test">
            <fields>
                <html>
                    <![CDATA[
                    <div class='test'><h3 class='class1'>Field {firstName}</h3></div>
                ]]>
                </html>
                <markdown>
                    <![CDATA[
                    <div class='test'><h3 class='class1'>Markdown {firstName}</h3></div>
                ]]>
                </markdown >
            </fields>
        </form>
    </regions>
</page>
