<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Автотест для fetch-on-enter">
    <regions>
        <table size="10">
            <datasource query-id="test"/>
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="price">
                    <text format="number 0,0"/>
                </column>
            </columns>

            <filters fetch-on-enter="false">
                <row>
                    <input-text id="minPrice" label="Минимальная цена" domain="integer"/>
                    <input-text id="maxPrice" label="Максимальная цена" domain="integer"/>
                </row>
            </filters>
        </table>

        <table size="10">
            <datasource query-id="test"/>
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="price">
                    <text format="number 0,0"/>
                </column>
            </columns>

            <filters fetch-on-enter="true">
                <row>
                    <input-text id="minPrice" label="Минимальная цена" domain="integer"/>
                    <input-text id="maxPrice" label="Максимальная цена" domain="integer"/>
                </row>
            </filters>
        </table>
    </regions>
</page>
