<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Тестирование доступности клика по строке таблицы">
    <table query-id="test">
        <columns>
            <column text-field-id="name"/>
            <column text-field-id="type"/>
        </columns>
        <rows>
            <click enabled="{type == '2'}">
                <show-modal page-id="modal" route="/modal"/>
            </click>
        </rows>
    </table>
</simple-page>