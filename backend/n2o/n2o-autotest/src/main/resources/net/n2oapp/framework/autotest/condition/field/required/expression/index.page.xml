<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Проверка условия обязательности полей">
    <form>
        <fields>
            <radio-group id="type">
                <options>
                    <option name="required" id="1"/>
                    <option name="not required" id="2"/>
                </options>
            </radio-group>
            <input-text id="field" required="{type.id == 1}" label="message"/>
        </fields>
    </form>
</simple-page>