<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Форма как фильтры таблицы">
    <regions>
        <form id="filters">
            <fields>
                <select id="period" label="Period" param="period">
                    <options>
                        <option name="Week" id="WEEK"/>
                        <option name="Month" id="MONTH"/>
                        <option name="Half year" id="HALF_YEAR"/>
                        <option name="Year" id="YEAR"/>
                        <option name="5 years" id="FIVE_YEARS"/>
                    </options>
                </select>
                <input-text id="id" label="Uid" domain="integer" param="uid"/>
            </fields>
        </form>
        <table fetch-on-init="true">
            <datasource query-id="test" route="/w1">
                <dependencies>
                    <fetch on="filters" model="resolve"/>
                </dependencies>
                <filters>
                    <eq field-id="id" value="{id}" datasource="filters"/>
                    <eq field-id="period.id" value="{period.id}" datasource="filters"/>
                </filters>
            </datasource>
            <columns>
                <column text-field-id="period.id">
                    <text/>
                </column>
            </columns>
        </table>
    </regions>
</page>