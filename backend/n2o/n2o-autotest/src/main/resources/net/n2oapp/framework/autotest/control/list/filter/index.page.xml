<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Фильтрация списковых полей">
    <form>
        <datasource size="1" query-id="test">
            <filters>
                <eq field-id="id" value="1"/>
            </filters>
        </datasource>
        <fields>
            <input-text id="type" description="Должно стоять 1" domain="integer"/>
            <input-select id="test1" label="Фильтр по type" description="При type=1 должно быть 2 значения" query-id="test" cache="false">
                <filters>
                    <eq field-id="type" value="{type}"/>
                </filters>
            </input-select>
            <input-select id="test2" label="Фильтр по константе" description="Должно быть 2 значения" query-id="test">
                <filters>
                    <eq field-id="type" value="1"/>
                </filters>
            </input-select>
            <input-select id="test3" label="Фильтр по ссылке с кэшированием" description="При type=1 должно быть 2 значения" query-id="test" cache="true">
                <filters>
                    <eq field-id="type" value="{type}"/>
                </filters>
            </input-select>
            <radio-group id="test4" label="Фильтр по радио кнопкам" description="При type=1 должно быть 2 значения" query-id="test" cache="true">
                <dependencies>
                    <fetch on="type"/>
                </dependencies>
                <filters>
                    <eq field-id="type" value="{type}"/>
                </filters>
            </radio-group>
            <checkbox-group id="test5" label="Фильтр по чекбоксам" description="При type=1 должно быть 2 значения" query-id="test" cache="true">
                <dependencies>
                    <fetch on="type"/>
                </dependencies>
                <filters>
                    <eq field-id="type" value="{type}"/>
                </filters>
            </checkbox-group>
        </fields>
    </form>
</simple-page>