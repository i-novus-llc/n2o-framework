<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Чтение значения поля из модели текущей страницы и родительской">
    <table id="table">
        <datasource query-id="test"/>
        <toolbar>
            <button label="Модальное окно">
                <show-modal page-id="page" route="/:id/modal">
                    <params>
                        <path-param name="id" value="{id}"/>
                    </params>
                </show-modal>
            </button>
            <button label="Открыть">
                <open-page page-id="page" route="/:id/read">
                    <params>
                        <path-param name="id" value="{id}"/>
                    </params>
                </open-page>
            </button>
        </toolbar>
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="name"/>
        </columns>
    </table>
</simple-page>