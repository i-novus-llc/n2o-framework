<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Кнопка-поле. Сообщение о причине недоступности">
    <form>
        <fields>
            <checkbox id="checkbox" label="Условие доступности кнопки"/>
            <button id="button" label="Кнопка-поле" description="Подсказка, если кнопка доступна">
                <dependencies>
                    <enabling on="checkbox" message="Сообщение о причине недоступности">
                        checkbox
                    </enabling>
                </dependencies>
            </button>
        </fields>
    </form>
</simple-page>