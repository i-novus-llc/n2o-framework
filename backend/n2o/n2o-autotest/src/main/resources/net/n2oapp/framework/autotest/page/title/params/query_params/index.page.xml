<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Start page">
    <regions>
        <table id="master">
            <datasource query-id="test"/>
            <toolbar>
                <button label="Open page">
                    <open-page page-id="page">
                        <params>
                            <query-param name="id" value="{id}"/>
                        </params>
                    </open-page>
                </button>
                <button label="Modal">
                    <show-modal page-id="page">
                        <params>
                            <query-param name="id" value="{id}"/>
                        </params>
                    </show-modal>
                </button>
            </toolbar>
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="name"/>
                <column text-field-id="type"/>
            </columns>
        </table>
        <form>
            <datasource size="1" query-id="test" route="/:master_id/detail">
                <dependencies>
                    <fetch on="master" model="resolve"/>
                </dependencies>
                <filters>
                    <eq field-id="id" param="master_id" value="{id}" datasource="master" model="resolve" required="true"/>
                </filters>
            </datasource>
            <toolbar place="bottomLeft">
                <button label="Open page from master" datasource="master">
                    <open-page page-id="page">
                        <params>
                            <query-param name="id" value="{id}"/>
                        </params>
                    </open-page>
                </button>
                <button label="Modal from detail">
                    <show-modal page-id="page">
                        <params>
                            <query-param name="id" value="{id}"/>
                        </params>
                    </show-modal>
                </button>
            </toolbar>
            <fields>
                <input-text id="name" enabled="false"/>
            </fields>
        </form>
    </regions>
</page>