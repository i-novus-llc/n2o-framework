<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Редактируемые ячейки">
    <table selection="none">
        <datasource query-id="test" object-id="test"/>
        <actions>
            <action id="update">
                <invoke operation-id="update" message-on-success="false"/>
            </action>
        </actions>

        <columns>
            <column text-field-id="id" label="№"/>
            <column text-field-id="name" label="Фамилия И.О">
                <edit action-id="update">
                    <input-text/>
                </edit>
            </column>
            <column text-field-id="date">
                <edit action-id="update" format="date DD.MM.YYYY">
                    <date-time/>
                </edit>
            </column>
            <column text-field-id="gender.name" label="Пол">
                <edit action-id="update">
                    <input-select id="gender">
                        <options>
                            <option id="1" name="мужской"/>
                            <option id="2" name="женский"/>
                        </options>
                    </input-select>
                </edit>
            </column>
            <column text-field-id="description" width="300px" label="Описание">
                <edit action-id="update">
                    <text-area min-rows="1" max-rows="5"/>
                </edit>
            </column>
        </columns>
        <pagination/>
        <toolbar>
            <button label="Установить Test" disable-on-empty-model="false">
                <invoke operation-id="update" message-on-success="false">
                    <form-param id="name"
                                value="Test"
                                model="resolve"/>
                </invoke>
            </button>
        </toolbar>
    </table>
</simple-page>