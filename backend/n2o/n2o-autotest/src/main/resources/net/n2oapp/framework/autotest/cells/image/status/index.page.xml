<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Статус у ячейки с картинкой">
    <table query-id="test">
        <columns>
            <column text-field-id="image">
                <image url="{image}">
                    <statuses>
                        <status
                                field-id="status"
                                icon="{icon}"
                                place="topRight"
                        />
                    </statuses>
                </image>
            </column>
        </columns>
    </table>
</simple-page>