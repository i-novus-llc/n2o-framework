<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             xmlns:sec="http://n2oapp.net/framework/config/schema/security-1.0"
             name="Доступ к кнопкам с sec:behavior=disable">
    <form>
        <toolbar>
            <button sec:permit-all="true" id="btn1" label="Доступно всем"/>
            <button sec:roles="admin" sec:behavior="disable" id="btn2" label="Только с ролью admin"/>
            <button sec:permissions="edit" sec:behavior="disable" id="btn3" label="Только с правом edit"/>
            <button sec:anonymous="true" sec:behavior="disable" id="btn4" label="Только анонимам"/>
        </toolbar>
        <fields>
            <hidden id="id" default-value="1"/>
        </fields>
    </form>
</simple-page>
