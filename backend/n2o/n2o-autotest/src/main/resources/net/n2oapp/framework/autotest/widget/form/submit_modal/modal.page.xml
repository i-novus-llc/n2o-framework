<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form>
        <datasource size="1" query-id="test" object-id="test">
            <submit operation-id="update" auto-submit-on="change"/>
            <filters>
                <eq field-id="id" param="id"/>
            </filters>
        </datasource>
        <toolbar place="bottomRight" generate="close"/>
        <fields>
            <input-text id="name" label="Имя"/>
            <input-text id="age" label="Возраст" domain="integer"/>
        </fields>
    </form>
</simple-page>