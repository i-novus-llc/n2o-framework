<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <table query-id="test">
        <columns>
            <column text-field-id="id"/>
            <filter-column text-field-id="name" style="color: red">
                <filter>
                    <input-text id="name"/>
                </filter>
            </filter-column>
            <filter-column text-field-id="type" class="font-italic">
                <filter>
                    <select id="type">
                        <options>
                            <option id="type1" name="type1"/>
                            <option id="type2" name="type2"/>
                            <option id="type3" name="type3"/>
                        </options>
                    </select>
                </filter>
            </filter-column>
            <filter-column text-field-id="birthday">
                <filter>
                    <date-interval id="birthday"/>
                </filter>
            </filter-column>
        </columns>
    </table>
</simple-page>