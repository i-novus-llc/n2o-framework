<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form>
        <fields>
            <row>
                <radio-group id="fieldset_visible">
                    <default-value name="visible" id="1"/>
                    <options>
                        <option name="visible" id="1"/>
                        <option name="hidden" id="2"/>
                    </options>
                </radio-group>
            </row>
            <hidden id="fieldset_hidden_visible" label="hidden_field" default-value="Ошибка, если поле видно"/>
            <set label="fieldset" visible="{fieldset_visible.id === 1}">
                <row>
                    <input-text id="fieldset_field_visible_0" label="without visible" default-value="Поле видно, если видно fieldset"/>
                </row>
                <row>
                    <input-text id="fieldset_field_visible_1" visible="true" label="visible=true" default-value="Поле видно, если видно fieldset"/>
                </row>
                <row>
                    <input-text id="fieldset_field_visible_2" visible="false" label="visible=false" label-class="text-danger" default-value="Ошибка, если поле видно"/>
                </row>
                <row>
                    <input-text id="fieldset_field_visible_3" label="dependencies[apply-on-init].visibility=true" default-value="Поле видно, если видно fieldset">
                        <dependencies>
                            <visibility>true</visibility>
                        </dependencies>
                    </input-text>
                </row>
                <row>
                    <input-text id="fieldset_field_visible_4" label="dependencies[apply-on-init].visibility=false" label-class="text-danger" default-value="Ошибка, если поле видно">
                        <dependencies>
                            <visibility>false</visibility>
                        </dependencies>
                    </input-text>
                </row>
                <row>
                    <input-text id="fieldset_field_visible_5" label="dependencies[apply-on-init].visibility=undefined" label-class="text-danger" default-value="Ошибка, если поле видно">
                        <dependencies>
                            <visibility>return undefined</visibility>
                        </dependencies>
                    </input-text>
                </row>
                <row>
                    <input-text id="fieldset_field_visible_6" label="dependencies[apply-on-init].visibility=null" label-class="text-danger" default-value="Ошибка, если поле видно">
                        <dependencies>
                            <visibility>return null</visibility>
                        </dependencies>
                    </input-text>
                </row>
            </set>
        </fields>
    </form>
</simple-page>