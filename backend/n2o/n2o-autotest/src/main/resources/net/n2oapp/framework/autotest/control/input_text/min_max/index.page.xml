<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Автотест для проверки нажатий по стрелкам input-text при разных интервалах min/max">
    <form>
        <fields>
            <set field-label-location="left" field-label-width="12">
                <input-text id="num0" domain="integer" max="-2" min="-5" label="1. max=-2 min=-5" description="по стрелкам должно быть -2"/>
                <input-text id="num1" domain="integer" max="5" min="2" label="2. max=5 min=2" description="по стрелкам должно быть 2"/>
                <input-text id="num2" domain="numeric" max="5" label="3. max=5 domain=numeric" description="по стрелкам должно быть 0.01\-0.01"/>
                <input-text id="num3" domain="integer" max="5" label="4. max=5" description="по стрелкам должно быть 1\-1"/>
                <input-text id="num4" domain="integer" max="-5" label="5. max=-5" description="по стрелкам должно быть -5"/>
                <input-text id="num5" domain="integer" min="5" label="6. min=5" description="по стрелкам должно быть 5"/>
                <input-text id="num6" domain="integer" min="-5" label="7. min=-5" description="по стрелкам должно быть 1\-1"/>
                <input-text id="num7" domain="integer" max="0" label="8. max=0" description="по стрелкам должно быть 0\-1"/>
                <input-text id="num8" domain="integer" min="0" label="9. min=0" description="по стрелкам должно быть 1\0"/>
                <input-text id="num9" domain="integer" label="10. нет ограничений" description="по стрелкам должно быть 1\-1"/>
            </set>
        </fields>
    </form>
</simple-page>
