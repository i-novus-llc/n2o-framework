<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Вторая страница">
    <regions>
        <form id="main">
            <datasource size="1" query-id="test">
                <filters>
                    <eq field-id="id" param="id"/>
                </filters>
            </datasource>
            <fields>
                <input-text id="id" label="Идентификатор выбранной ранее записи"/>
                <input-text id="name" label="Имя выбранной ранее записи"/>
            </fields>
        </form>
        <table id="w1">
            <datasource query-id="detail" route="/report">
                <dependencies>
                    <fetch on="main" model="resolve"/>
                </dependencies>
                <filters>
                    <eq field-id="type" value="{id}" datasource="main" model="resolve" required="true"/>
                </filters>
            </datasource>
            <columns>
                <column label="Имя" text-field-id="surname"/>
                <column label="Тип (должен совпадать с идентификатором выбранной ранее записи)" text-field-id="type"/>
            </columns>
        </table>
    </regions>
</page>