<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="CardsWidget2">
    <cards src="CardsWidget" height="250px">
        <datasource query-id="test"/>
        <pagination/>
        <content>
            <col size="3">
                <block text-field-id="text">
                    <text/>
                </block>
                <block text-field-id="image">
                    <image/>
                </block>
            </col>
            <col size="2">
                <block text-field-id="icon" tooltip-field-id="icon">
                    <icon>
                        <switch value-field-id="icon">
                            <case value="bicycle">fa fa-bicycle</case>
                            <case value="ship">fa fa-ship</case>
                        </switch>
                    </icon>
                </block>
                <block text-field-id="badge">
                    <badge color="info"/>
                </block>
                <block text-field-id="progress">
                    <progress/>
                </block>
                <block text-field-id="rating">
                    <rating half="true" readonly="false"/>
                </block>
                <block text-field-id="checkbox">
                    <checkbox/>
                </block>
            </col>
        </content>
    </cards>
</simple-page>