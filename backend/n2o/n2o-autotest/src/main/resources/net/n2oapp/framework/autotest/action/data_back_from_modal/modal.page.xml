<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Модальная страница с прокинутыми значениями">
    <form>
        <fields>
            <hidden id="text">
                <dependencies>
                    <set-value apply-on-init="false" on="inputField">inputField</set-value>
                </dependencies>
            </hidden>
            <input-text id="inputField" label="Поле ввода, данные из которого должны отобразиться на странице"/>
        </fields>
    </form>
</simple-page>