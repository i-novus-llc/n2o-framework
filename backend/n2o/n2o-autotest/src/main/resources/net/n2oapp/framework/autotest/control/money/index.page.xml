<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Название страницы" route="/pageRoute">
    <form>
        <fields>
            <input-money class="n2o" id="money" label="InputMoney" suffix=" rub" prefix="" thousands-separator=" " decimal-separator=","/>
            <button label="Кнопка"/>
            <input-money id="money_s" default-value="1200400.00"/>
            <input-money id="money_d" default-value="1200400.10"/>
            <input-text id="text_money"/>
            <button label="Отправить">
                <set-value to="text_money">money_d</set-value>
            </button>
        </fields>
    </form>
</simple-page>