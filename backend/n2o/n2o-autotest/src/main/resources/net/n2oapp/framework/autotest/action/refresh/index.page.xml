<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Проверка действия refresh">
    <regions>
        <form>
            <datasource object-id="test"/>
            <toolbar place="bottomLeft">
                <button label="Refresh table">
                    <refresh datasource="users"/>
                </button>
            </toolbar>
            <fields>
                <input-text id="name">
                    <toolbar>
                        <button label="Send">
                            <invoke operation-id="send"/>
                        </button>
                    </toolbar>
                </input-text>
            </fields>
        </form>
        <table id="users">
            <datasource query-id="test" object-id="test"/>
            <toolbar place="topRight">
                <button label="Refresh">
                    <refresh datasource="users"/>
                </button>
            </toolbar>
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="name"/>
            </columns>
        </table>
    </regions>
</page>