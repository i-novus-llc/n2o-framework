<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Автотест отдельных кнопок фильтров">
    <table>
        <datasource query-id="test"/>
        <filters>
            <input-text id="name"/>
            <input-text id="type"/>
            <col size="6">
                <search-button label="search" color="danger"/>
                <clear-button label="clear" ignore="type"/>
            </col>
        </filters>
        <columns>
            <column text-field-id="name"/>
            <column text-field-id="type"/>
        </columns>
    </table>
</simple-page>