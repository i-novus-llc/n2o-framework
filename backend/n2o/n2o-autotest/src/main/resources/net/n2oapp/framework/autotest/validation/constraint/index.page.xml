<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Валидация в сервисе">
    <form>
        <datasource object-id="test"/>
        <toolbar place="bottomLeft">
            <button id="create" label="Create">
                <invoke operation-id="create"/>
            </button>
        </toolbar>
        <fields>
            <hidden id="id" default-value="1"/>
            <input-text id="name" label="First name">
                <validations white-list="uniqueName"/>
            </input-text>
            <input-text id="name2" label="Middle name">
                <validations white-list="uniqueName2"/>
            </input-text>
            <input-text id="name3" label="Last name"/>
            <input-text id="address" label="Address">
                <validations>
                    <constraint id="uniqueAddress" severity="warning" message="Адрес {address} уже существует" result="#this == null">
                        <in>
                            <field id="address"/>
                        </in>
                        <invocation>
                            <test file="address.json" operation="findOne"/>
                        </invocation>
                    </constraint>
                </validations>
            </input-text>
        </fields>
    </form>
</simple-page>