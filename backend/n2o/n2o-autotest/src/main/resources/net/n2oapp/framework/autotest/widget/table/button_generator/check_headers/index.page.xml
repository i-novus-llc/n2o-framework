<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Автотест настроек таблицы">
    <table selection="none">
        <datasource query-id="data" size="5"/>
        <columns>
            <column text-field-id="id" label="" icon="fa fa-plus"/>
            <column text-field-id="id_ips" label=""/>
            <column text-field-id="name" icon="fa fa-pencil"/>
            <column text-field-id="region"/>
        </columns>
        <filters place="top">
            <row>
                <col size="4">
                    <input-text id="name"/>
                </col>
                <col size="4">
                    <input-text id="region"/>
                </col>
            </row>
        </filters>
        <toolbar place="topRight">
            <group generate="columns"/>
        </toolbar>
    </table>
</simple-page>
