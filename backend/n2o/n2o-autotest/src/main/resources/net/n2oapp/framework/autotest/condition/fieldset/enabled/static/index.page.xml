<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form>
        <fields>
            <row>
                <radio-group id="fields_enabled" inline="true">
                    <default-value name="enabled" id="1"/>
                    <options>
                        <option name="enabled" id="1"/>
                        <option name="disabled" id="2"/>
                    </options>
                </radio-group>
            </row>
            <set label="fieldset[enabled=false]" enabled="false">
                <row>
                    <input-text id="disabled_1" enabled="true" label="enable=true" default-value="Ошибка, если поле доступно"/>
                    <input-text id="disabled_2" enabled="{fields_enabled.id == 1}" label="enable=fields_enabled" default-value="Ошибка, если поле доступно"/>
                </row>
                <row>
                    <input-text id="disabled_3" label="dependencies.enabling[on=fields_enabled]" default-value="Ошибка, если поле доступно">
                        <dependencies>
                            <enabling on="fields_enabled">return fields_enabled.id == 1</enabling>
                        </dependencies>
                    </input-text>
                    <input-text id="disabled_4" label="dependencies.enabling[on=fields_enabled]=true" default-value="Ошибка, если поле доступно">
                        <dependencies>
                            <enabling on="fields_enabled">return true</enabling>
                        </dependencies>
                    </input-text>
                </row>
                <row>
                    <input-text id="disabled_5" label="dependencies.enabling[on=fields_enabled]=false" default-value="Ошибка, если поле доступно">
                        <dependencies>
                            <enabling on="fields_enabled">return false</enabling>
                        </dependencies>
                    </input-text>
                    <input-text id="disabled_6" label="dependencies.enabling[on=fields_enabled]=undefined" default-value="Ошибка, если поле доступно">
                        <dependencies>
                            <enabling on="fields_enabled">return undefined</enabling>
                        </dependencies>
                    </input-text>
                </row>
            </set>
        </fields>
    </form>
</simple-page>