<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <form>
        <fields>
            <input-text id="input1" label="InputText" length="10" placeholder="Введите текст" measure="шт."/>
            <input-text id="input2" label="InputNumber" domain="integer"
                        default-value="5" min="-100" max="100" step="2" measure="cm"/>
            <input-text id="input3" label="InputFloat" domain="numeric"
                        default-value="0" min="-10" max="10" step="0.5"/>
            <input-text id="input4" label="Дробная часть длины 4" domain="numeric"
                        precision="4" default-value="1.3333333333"/>
            <input-text id="input5" label="integer" domain="integer"
                        default-value="5"/>
        </fields>
    </form>
</simple-page>