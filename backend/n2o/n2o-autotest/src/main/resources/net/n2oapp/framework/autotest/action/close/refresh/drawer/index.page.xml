<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Обновление виджета после закрытия модального окна">
    <regions>
        <table id="table">
            <datasource query-id="test"/>
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="name"/>
            </columns>
        </table>
        <form>
            <toolbar>
                <button label="Modal" disable-on-empty-model="false">
                    <show-modal page-id="modal" refresh-on-close="true" refresh-datasources="table" route="/modal" backdrop="true"/>
                </button>
                <button label="Drawer" disable-on-empty-model="false">
                    <open-drawer page-id="modal" refresh-on-close="true" refresh-datasources="table" route="/drawer" close-on-backdrop="true"/>
                </button>
            </toolbar>
        </form>
    </regions>
</page>