<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Ячейки со списками">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column text-field-id="texts">
                <list label-field-id="textField">
                    <text/>
                </list>
            </column>
            <column text-field-id="textsInline">
                <list label-field-id="textField" inline="true" separator=", ">
                    <text/>
                </list>
            </column>
            <column text-field-id="links">
                <list size="2" label-field-id="linkField">
                    <link url="{link}" target="newWindow"/>
                </list>
            </column>
            <column text-field-id="badges">
                <list label-field-id="badgeField">
                    <badge/>
                </list>
            </column>
        </columns>
    </table>
</simple-page>