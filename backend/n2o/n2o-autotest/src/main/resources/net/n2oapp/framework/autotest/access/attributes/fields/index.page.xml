<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" xmlns:sec="http://n2oapp.net/framework/config/schema/security-1.0" name="Доступ к полям по sec атрибутам">
    <form>
        <fields>
            <input-text sec:permit-all="true" id="field1" label="Доступно всем"/>
            <input-text sec:roles="admin" id="field2" label="Только с ролью admin"/>
            <input-text sec:permissions="edit" id="field3" label="Только с правом edit"/>
            <input-text sec:anonymous="true" id="field4" label="Только анонимам"/>
        </fields>
    </form>
</simple-page>