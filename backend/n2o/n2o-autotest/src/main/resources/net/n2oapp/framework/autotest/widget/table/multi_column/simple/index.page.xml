<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Проверка работы многоуровневых столбцов таблицы">
    <regions>
        <region>
            <table id="table1">
                <datasource query-id="test"/>
                <columns>
                    <column label="ID" text-field-id="id"/>
                    <multi-column label="Info" style="color: red">
                        <column label="FirstName" style="color: green" text-field-id="firstName"/>
                        <column label="LastName" text-field-id="lastName"/>
                    </multi-column>
                    <column label="Birthday" text-field-id="birthday"/>
                </columns>
            </table>
            <table id="table2">
                <datasource query-id="test"/>
                <columns>
                    <column label="ID" text-field-id="id"/>
                    <multi-column label="Info" class="font-italic">
                        <multi-column label="Name" class="font-italic">
                            <column label="FirstName" class="font-italic" text-field-id="firstName"/>
                            <column label="LastName" text-field-id="lastName"/>
                        </multi-column>
                        <filter-column label="Phone" text-field-id="phone">
                            <filter>
                                <input-text id="phone"/>
                            </filter>
                        </filter-column>
                    </multi-column>
                    <column label="Birthday" text-field-id="birthday"/>
                </columns>
            </table>
        </region>
    </regions>
</page>