<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <regions>
        <region>
            <form id="period">
                <fields>
                    <set>
                        <radio-group id="period" label="Period" param="period" inline="true">
                            <default-value name="Year" id="YEAR"/>
                            <options>
                                <option name="Week" id="WEEK"/>
                                <option name="Month" id="MONTH"/>
                                <option name="Half year" id="HALF_YEAR"/>
                                <option name="Year" id="YEAR"/>
                                <option name="5 years" id="FIVE_YEARS"/>
                            </options>
                        </radio-group>
                    </set>
                </fields>
            </form>
            <table fetch-on-init="true">
                <datasource query-id="test">
                    <dependencies>
                        <fetch on="period" model="resolve"/>
                    </dependencies>
                    <filters>
                        <eq field-id="period.id" value="{period.id}" datasource="period"/>
                    </filters>
                </datasource>
                <columns>
                    <column text-field-id="name"/>
                </columns>
            </table>
        </region>
    </regions>
</page>