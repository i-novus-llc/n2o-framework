<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Префильтрация списковых компонентов">
    <table>
        <datasource query-id="test"/>
        <toolbar>
            <button label="Open">
                <open-page page-id="modalForm" route="/:gender_id/:const_gender_id/modal">
                    <datasources>
                        <datasource default-values-mode="defaults"/>
                    </datasources>
                    <params>
                        <path-param name="const_gender_id" value="2"/>
                        <path-param name="gender_id" value="{id}"/>
                    </params>
                </open-page>
            </button>
        </toolbar>
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="name"/>
        </columns>
    </table>
</simple-page>