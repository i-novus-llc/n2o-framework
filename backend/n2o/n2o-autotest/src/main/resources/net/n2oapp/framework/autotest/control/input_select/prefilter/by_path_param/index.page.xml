<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Префильтрация списковых компонентов">
    <table query-id="test">
        <toolbar>
            <button label="Open">
                <open-page page-id="modalForm" route="/:gender_id/:const_gender_id/modal"  upload="defaults">
                    <path-param name="const_gender_id" value="2"/>
                    <path-param name="gender_id" value="{id}"/>
                </open-page>
            </button>
        </toolbar>
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="name"/>
        </columns>
    </table>
</simple-page>
