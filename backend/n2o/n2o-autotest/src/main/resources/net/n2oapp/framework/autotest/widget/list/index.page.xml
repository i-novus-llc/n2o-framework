<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Название страницы" route="/">
    <list id="list">
        <datasource size="10" query-id="testList"/>
        <pagination prev="true" next="true"/>
        <rows>
            <click>
                <open-page page-id="form" route="/:id/open">
                    <params>
                        <path-param name="id" value="{id}"/>
                    </params>
                </open-page>
            </click>
        </rows>
        <content>
            <left-top text-field-id="leftTop">
                <image/>
            </left-top>
            <left-bottom text-field-id="leftBottom">
                <text/>
            </left-bottom>
            <header text-field-id="header">
                <text/>
            </header>
            <body text-field-id="body">
                <text visible="true"/>
            </body>
            <sub-header text-field-id="subHeader">
                <badge color="success"/>
            </sub-header>
            <right-top text-field-id="rightTop">
                <icon visible="true" icon="fa fa-comment"/>
            </right-top>
            <right-bottom text-field-id="rightBottom">
                <text visible="true"/>
            </right-bottom>
            <extra text-field-id="extra">
                <toolbar>
                    <button id="1" label="" icon="fa fa-plus" description="Add" datasource="list"/>
                    <button id="2" label="" icon="fa fa-trash" description="Delete" datasource="list"/>
                </toolbar>
            </extra>
        </content>
    </list>
</simple-page>