<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Модальное окно">
    <form>
        <fields>
            <input-text id="name" label="Получение значения для простого поля по ссылке" ref-page="parent"
                        ref-field-id="name"/>
            <input-text id="name2" label="Получение значения для простого поля по default-value" ref-page="parent"
                        default-value="{name}"/>
            <input-select id="address" label="Получение значения для спиского поля по default-value" ref-page="parent"
                          query-id="test">
                <default-value name="{address.name}" id="{address.id}"/>
            </input-select>
            <input-select id="addresses" label="Получение значения для спиского поля с множественным выбором"
                          ref-page="parent" ref-field-id="addresses" query-id="test" type="multi"/>
            <input-select id="addressByForm" label="Получение значения для спиского поля из модели всей формы"
                          ref-page="parent" ref-datasource="second" query-id="test"/>
        </fields>
    </form>
</simple-page>