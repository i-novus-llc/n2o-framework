<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Кнопка-поле. Проверка всех кнопочных атрибутов">
    <form>
        <fields>
            <button
                    id="button"
                    label="Кнопка-поле"
                    icon="fa fa-search"
                    color="primary"
                    description="description"
                    tooltip-position="top"
                    rounded="true"
            />
            <checkbox label="Checkbox1" id="clicked"/>
            <button
                    id="button1"
                    label="Кнопка-поле1"
                    color="{clicked ? 'danger' : 'success'}"
                    style="text-decoration: underline"
            />
        </fields>
    </form>
</simple-page>

