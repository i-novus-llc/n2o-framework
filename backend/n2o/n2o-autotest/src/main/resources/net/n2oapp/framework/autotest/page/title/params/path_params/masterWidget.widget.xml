<?xml version='1.0' encoding='UTF-8'?>
<table xmlns="http://n2oapp.net/framework/config/schema/widget-5.0">
    <toolbar>
        <button label="Open page">
            <open-page page-id="page" route="/:id/bread">
                <params>
                    <path-param name="id" value="{id}"/>
                </params>
            </open-page>
        </button>
        <button label="Modal">
            <show-modal page-id="page" route="/:id/modal">
                <params>
                    <path-param name="id" value="{id}"/>
                </params>
            </show-modal>
        </button>
    </toolbar>
    <datasource query-id="test"/>
    <columns>
        <column text-field-id="id"/>
        <column text-field-id="name"/>
        <column text-field-id="type"/>
    </columns>
</table>