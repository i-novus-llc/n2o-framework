<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Проверка тултипа в нескольких видах ячеек: text, checkbox, icon">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column text-field-id="text" tooltip-field-id="tooltip_text"/>
            <column text-field-id="checkbox" tooltip-field-id="tooltip_checkbox">
                <checkbox/>
            </column>
            <column label="icon" tooltip-field-id="tooltip_icon">
                <icon>
                    <switch value-field-id="icon">
                        <case value="fa fa-phone">fa fa-phone</case>
                        <case value="fa fa-plus">fa fa-plus</case>
                        <case value="fa fa-fax">fa fa-fax</case>
                        <case value="fa fa-minus">fa fa-minus</case>
                    </switch>
                </icon>
            </column>
        </columns>
    </table>
</simple-page>