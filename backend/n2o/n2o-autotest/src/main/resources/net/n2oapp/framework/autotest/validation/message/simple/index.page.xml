<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Dynamic validation test">
    <regions>
        <region>
            <form>
                <datasource object-id="test"/>
                <toolbar place="bottomLeft">
                    <button label="Check" validate="true">
                        <invoke operation-id="echo"/>
                    </button>
                </toolbar>
                <fields>
                    <radio-group id="licenceGroup" label="Requiring text" inline="true">
                        <default-value id="1"/>
                        <options>
                            <option name="requiring true" id="1"/>
                            <option name="requiring false" id="2"/>
                        </options>
                    </radio-group>
                    <text-area id="licenses" label="Text-area">
                        <dependencies>
                            <enabling on="licenceGroup">return typeof licenceGroup !== 'undefined' &amp;&amp; licenceGroup !== null
                                &amp;&amp; licenceGroup.id === 1</enabling>
                            <requiring on="licenceGroup">typeof licenceGroup !== 'undefined' &amp;&amp; licenceGroup !== null
                                &amp;&amp; licenceGroup.id === 1</requiring>
                            <visibility>true</visibility>
                        </dependencies>
                    </text-area>
                    <hidden id="id" default-value="1"/>
                </fields>
            </form>
        </region>
        <region>
            <form>
                <datasource object-id="test"/>
                <toolbar place="bottomLeft">
                    <button label="Check" validate="true">
                        <invoke operation-id="echo"/>
                    </button>
                    <button label="Empty" disable-on-empty-model="false"/>
                </toolbar>
                <fields>
                    <radio-group id="validator" label="Make valid" inline="true">
                        <options>
                            <option name="Yes" id="1"/>
                            <option name="No" id="2"/>
                        </options>
                    </radio-group>
                    <input-text id="input1" label="Field" depends-on="validator">
                        <validations>
                            <condition id="validateKs" severity="danger" message="Field is not valid" on="validator">return typeof validator !== 'undefined' &amp;&amp; validator !== null
                                &amp;&amp; validator.id === 2</condition>
                        </validations>
                    </input-text>
                </fields>
            </form>
        </region>
        <region>
            <form>
                <toolbar place="bottomLeft">
                    <button label="Empty" disable-on-empty-model="false"/>
                </toolbar>
                <fields>
                    <text-area id="reworkRequirements" label="Requiring field" placeholder="Enter text here">
                        <dependencies>
                            <requiring>true</requiring>
                            <visibility>true</visibility>
                        </dependencies>
                    </text-area>
                </fields>
            </form>
        </region>
    </regions>
</page>