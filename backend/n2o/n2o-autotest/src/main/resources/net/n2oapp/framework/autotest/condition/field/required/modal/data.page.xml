<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <datasources>
        <parent-datasource id="ds"/>
    </datasources>

    <regions>
        <form>
            <datasource id="modalDs"/>
            <fields>
                <input-text id="name" label="Имя" required="true"/>
                <input-text id="type" label="Тип" required="true"/>
            </fields>
        </form>
    </regions>

    <toolbar>
        <button label="Сохранить" datasource="modalDs">
            <invoke operation-id="create" object-id="data"/>
            <refresh datasource="ds"/>
            <close/>
        </button>
        <button label="Закрыть">
            <close/>
        </button>
    </toolbar>
</page>
