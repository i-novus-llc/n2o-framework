<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Название и описание у ячейки с картинкой">
    <table query-id="test">
        <columns>
            <column text-field-id="url">
                <image id="image1"
                       url="{url}"
                       data="{data}"
                       title="{title}"
                       description="{desc}"
                       width="40px"
                       text-position="left"
                />
            </column>
        </columns>
    </table>
</simple-page>