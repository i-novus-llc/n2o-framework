<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form>
        <fields>
            <row>
                <radio-group id="fieldset_enabled">
                    <default-value name="enabled" id="1"/>
                    <options>
                        <option name="enabled" id="1"/>
                        <option name="disabled" id="2"/>
                    </options>
                </radio-group>
            </row>
            <hidden id="fieldset_hidden_visible" label="hidden_field" default-value="Ошибка, если поле видно"/>
            <set label="fieldset" enabled="{fieldset_enabled.id === 1}">
                <row>
                    <input-text id="fieldset_field_enable_0" label="without enable" default-value="Поле доступно, если доступен fieldset"/>
                </row>
                <row>
                    <input-text id="fieldset_field_enable_1" enabled="true" label="enable=true" default-value="Поле доступно, если доступен fieldset"/>
                </row>
                <row>
                    <input-text id="fieldset_field_enable_2" enabled="false" label="enable=false" default-value="Ошибка, если поле доступно"/>
                </row>
                <row>
                    <input-text id="fieldset_field_enable_3" label="dependencies[apply-on-init].enabling=true" default-value="Поле доступно, если доступен fieldset">
                        <dependencies>
                            <enabling>true</enabling>
                        </dependencies>
                    </input-text>
                </row>
                <row>
                    <input-text id="fieldset_field_enable_4" label="dependencies[apply-on-init].enabling=false" default-value="Ошибка, если поле доступно">
                        <dependencies>
                            <enabling>false</enabling>
                        </dependencies>
                    </input-text>
                </row>
                <row>
                    <input-text id="fieldset_field_enable_5" label="dependencies[apply-on-init].enabling=undefined" default-value="Ошибка, если поле доступно">
                        <dependencies>
                            <enabling>return undefined</enabling>
                        </dependencies>
                    </input-text>
                </row>
                <row>
                    <input-text id="fieldset_field_enable_6" label="dependencies[apply-on-init].enabling=null" default-value="Ошибка, если поле доступно">
                        <dependencies>
                            <enabling>return null</enabling>
                        </dependencies>
                    </input-text>
                </row>
            </set>
        </fields>
    </form>
</simple-page>