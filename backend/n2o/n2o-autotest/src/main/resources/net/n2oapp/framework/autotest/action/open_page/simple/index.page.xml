<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Сохранение фильтров при возврате назад">
    <table>
        <datasource query-id="test"/>
        <rows>
            <click>
                <open-page page-id="open" route="/:id/open">
                    <params>
                        <path-param name="id" value="{id}"/>
                    </params>
                </open-page>
            </click>
        </rows>
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="name"/>
            <column text-field-id="type"/>
        </columns>
        <filters>
            <input-text id="name"/>
        </filters>
    </table>
</simple-page>