<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <regions>
        <region>
            <form id="main">
                <fields>
                    <input-text id="version"/>
                    <input-text id="number"/>
                </fields>
            </form>
            <form id="dependent">
                <datasource>
                    <dependencies>
                        <fetch on="main" model="resolve"/>
                    </dependencies>
                    <filters>
                        <eq field-id="id" value="{id}" datasource="main" model="resolve" required="true"/>
                    </filters>
                </datasource>
                <toolbar>
                    <button datasource="main">
                        <open-drawer page-id="openDrawerPage" route="/:main_id/detail/:version/btn1">
                            <params>
                                <query-param name="number" value="{number}"/>
                                <path-param name="main_id" value="{id}"/>
                                <path-param name="version" value="{version}"/>
                            </params>
                        </open-drawer>
                    </button>
                </toolbar>
            </form>
        </region>
    </regions>
</page>