<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form>
        <fields>
            <checkbox-group id="chb1">
                <filters>
                    <eq field-id="testFieldId1" value="{type}"/>
                    <eq field-id="testFieldId2" value="{type}"/>
                </filters>
            </checkbox-group>
            <checkbox-group id="chb2">
                <dependencies>
                    <fetch on="type"/>
                </dependencies>
                <filters>
                    <eq field-id="testFieldId2" value="{type}"/>
                </filters>
            </checkbox-group>
            <checkbox-group id="chb3"/>
            <radio-group id="rg1">
                <filters>
                    <eq field-id="testFieldId3" value="{type}"/>
                    <eq field-id="testFieldId3a" value="{type2}"/>
                </filters>
            </radio-group>
            <radio-group id="rg2">
                <dependencies>
                    <fetch on="testFieldId4"/>
                </dependencies>
                <filters>
                    <eq field-id="testFieldId4" value="{type}"/>
                </filters>
            </radio-group>
            <radio-group id="rg3"/>
            <input-select id="is1">
                <filters>
                    <eq field-id="testFieldId5" value="{type}"/>
                </filters>
            </input-select>
            <input-select id="is2">
                <dependencies>
                    <fetch on="testFetchOn"/>
                </dependencies>
                <filters>
                    <eq field-id="testFieldId5" value="{type}"/>
                </filters>
            </input-select>
        </fields>
    </form>
</simple-page>