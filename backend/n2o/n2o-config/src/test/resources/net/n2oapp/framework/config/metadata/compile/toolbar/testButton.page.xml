<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <regions>
        <region>
            <table id="table">
                <datasource object-id="utBlank"/>
                <toolbar>
                    <button id="btn5"/>
                </toolbar>
            </table>
        </region>
    </regions>

    <toolbar>
        <button id="btn1" label="delete" badge="{badge}" badge-color="{color}" color="danger"
                datasource="table" tooltip-position="right" class="Button" style="color:red;" description="hint">
            <invoke operation-id="delete"/>
        </button>
        <button id="btn2" icon="fa fa-pencil"/>
        <button id="btn3" label="load" icon="fa fa-download"/>
        <button id="btn4" description="{description}"/>
        <button id="btn6" model="datasource"/>
        <button id="btn7" confirm="true" datasource="table">
            <invoke operation-id="delete"/>
        </button>
        <button id="btn8" confirm="true" confirm-title="Предупреждение" confirm-text="Подтвердите действие"
                confirm-ok-label="Да" сonfirm-cancel-label="Нет" confirm-type="popover"
                confirm-ok-color="danger" confirm-cancel-color="primary"/>
        <button id="btn9" confirm="{test}" datasource="test"/>
    </toolbar>
</page>