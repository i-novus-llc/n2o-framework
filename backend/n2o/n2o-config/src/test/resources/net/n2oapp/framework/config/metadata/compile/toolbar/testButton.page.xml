<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" object-id="utBlank">
    <regions>
        <region>
            <table id="table"/>
        </region>
    </regions>

    <toolbar>
        <button id="btn1" label="delete" color="danger" icon="fa fa-trash" type="text"
                tooltip-position="right" class="Button" style="color:red;" description="hint">
            <invoke operation-id="delete"/>
        </button>
        <button id="btn2" label="edit" icon="fa fa-pencil" type="icon"/>
        <button id="btn3" label="load" icon="fa fa-download"/>
        <button id="btn4" description="{description}"/>
    </toolbar>
</page>