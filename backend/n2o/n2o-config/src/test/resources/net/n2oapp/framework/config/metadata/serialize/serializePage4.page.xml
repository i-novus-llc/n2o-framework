<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      xmlns:sec="http://n2oapp.net/framework/config/schema/security-1.0"
      name="Таблица">
    <datasources>
        <datasource id="ds">
            <filters>
                <eq field-id="name"/>
            </filters>
        </datasource>
    </datasources>

    <regions>
        <table sec:roles="admib">
            <datasource query-id="test"/>
            <columns>
                <column text-field-id="name"/>
                <column text-field-id="type"/>
            </columns>
            <toolbar>
                <button id="create" label="${username}">
                    <dependencies>
                        <enabling model="multi">!_.isEmpty(this)</enabling>
                    </dependencies>
                </button>
            </toolbar>
        </table>

        <cards height="150px">
            <datasource query-id="data"/>
            <content>
                <col size="2">
                    <block>
                        <image data="{photo}" width="170px"/>
                    </block>
                </col>
                <col size="3">
                    <block text-field-id="name">
                        <text class="font-weight-bold"/>
                    </block>
                    <block text-field-id="link">
                        <link type="iconAndText" icon="fa fa-desktop" target="newWindow" url="{link}"/>
                    </block>
                </col>
                <col size="7">
                    <block text-field-id="description">
                        <text/>
                    </block>
                </col>
            </content>
        </cards>

        <form>
            <fields>
                <input-text id="name">
                    <dependencies>
                        <enabling>true</enabling>
                    </dependencies>
                </input-text>
            </fields>
        </form>
    </regions>
</page>