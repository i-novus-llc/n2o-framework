<?xml version='1.0' encoding='UTF-8'?>
<application xmlns="http://n2oapp.net/framework/config/schema/application-3.0">
    <events>
        <stomp-event id="showNotif" destination="/notifications">
            <alert title="{title}" text="{text}" color="{color}" placement="{placement}" timeout="{timeout}"/>
        </stomp-event>
        <stomp-event id="showTask" destination="/task">
            <alert title="{title}" text="{text}" color="primary" placement="topLeft" timeout="{timeout}"/>
        </stomp-event>
    </events>
</application>