<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="first" route="/page">
    <regions>
        <line>
            <form id="test">
                <toolbar>
                    <button id="id1">
                        <a href="/test" target="application"/>
                    </button>
                    <button id="id2">
                        <a href="/test2/:param1/:param2?param3=:param3" target="application">
                            <path-param name="param1" value="{field1}" datasource="secondWgt" model="filter"/>
                            <path-param name="param2" value="{field2}"/>
                            <query-param name="param3" value="{field3}" datasource="secondWgt" model="filter"/>
                        </a>
                    </button>
                    <button id="id3">
                        <a href="http://google.com"/>
                    </button>
                    <button id="id4">
                        <show-modal page-id="testAnchorAction2"/>
                    </button>
                </toolbar>
            </form>
        </line>
        <line>
            <table id="secondWgt">
                <toolbar>
                    <button id="secWgt" model="filter" datasource="test">
                        <a href="/test/:minPrice/" target="newWindow">
                            <path-param name="minPrice" value="{minPrice}"/>
                        </a>
                    </button>
                    <button id="withParam" model="filter" datasource="test">
                        <a href="{url}" target="newWindow"/>
                    </button>
                </toolbar>
            </table>
        </line>
    </regions>
</page>