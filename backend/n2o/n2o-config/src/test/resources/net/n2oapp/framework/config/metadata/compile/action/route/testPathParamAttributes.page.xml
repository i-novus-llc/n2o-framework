<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <regions>
        <region>
            <form id="master">
                <fields>
                    <input-text id="clientId"/>
                </fields>
            </form>
            <form id="dependent">
                <toolbar>
                    <button id="create" model="filter">
                        <show-modal page-id="testOpenPageRoutePage" route="/:id/create">
                            <params>
                                <path-param name="id" value="{clientId}" datasource="master" model="resolve"/>
                            </params>
                        </show-modal>
                    </button>
                </toolbar>
            </form>
            <form id="dependent2">
                <toolbar>
                    <button id="create" model="filter">
                        <show-modal page-id="testOpenPageRoutePage" route="/:id/create">
                            <params>
                                <path-param name="id" value="{clientId}"/>
                            </params>
                        </show-modal>
                    </button>
                </toolbar>
            </form>
        </region>
    </regions>
</page>