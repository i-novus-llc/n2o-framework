<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <regions>
        <panel>
            <table id="master">
                <datasource query-id="testStandardPageDependency"/>
            </table>
        </panel>
        <panel>
            <table id="detail" visible="{parent.id == 1}">
                <datasource query-id="testStandardPageDependency">
                    <dependencies>
                        <fetch on="master" model="resolve"/>
                    </dependencies>
                    <filters>
                        <eq field-id="parent.id" value="{id}" datasource="master" model="resolve" required="true"/>
                    </filters>
                </datasource>
                <dependencies>
                    <visibility datasource="master" model="resolve">parent.id == 1</visibility>
                </dependencies>
            </table>
            <table visible="true">
                <datasource query-id="testStandardPageDependency" object-id="testStandardPageDependency">
                    <dependencies>
                        <fetch on="detail" model="resolve"/>
                    </dependencies>
                    <filters>
                        <eq field-id="parent.id" value="{parent.id}" datasource="detail" model="resolve" required="true"/>
                    </filters>
                </datasource>
                <toolbar generate="delete"/>
                <dependencies>
                    <visibility datasource="detail" model="resolve"/>
                </dependencies>
                <pagination prev="false" next="false" show-count="never"/>
            </table>
        </panel>
    </regions>
</page>