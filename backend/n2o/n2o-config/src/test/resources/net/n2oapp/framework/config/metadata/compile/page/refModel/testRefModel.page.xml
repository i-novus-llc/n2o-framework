<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <regions>
        <form id="main">
            <datasource size="1" query-id="testRefModel">
                <filters>
                    <eq field-id="id" param="id"/>
                </filters>
            </datasource>
            <fields>
                <input-text id="id" enabled="false"/>
            </fields>
        </form>
        <form id="dependent">
            <datasource size="1" query-id="testRefModel">
                <dependencies>
                    <fetch on="main" model="resolve"/>
                </dependencies>
                <filters>
                    <eq field-id="id" value="{id}" datasource="main" model="resolve" required="true"/>
                </filters>
            </datasource>
            <fields>
                <input-text id="mainId" enabled="false" label="Чтение из виджета текущей страницы" ref-page="this" ref-datasource="main" default-value="{id}"/>
                <input-text id="mainId2" enabled="false" label="Чтение из виджета родительской страницы" ref-page="parent" ref-datasource="table" default-value="{id}"/>
            </fields>
        </form>
    </regions>
</page>