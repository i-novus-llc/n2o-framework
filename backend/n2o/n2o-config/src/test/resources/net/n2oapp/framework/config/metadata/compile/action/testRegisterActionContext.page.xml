<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form>
        <datasource size="1" query-id="testActionContext"/>
        <toolbar>
            <button action-id="save"/>
        </toolbar>
        <actions>
            <action id="save">
                <invoke close-on-success="true" operation-id="create" route="/:test">
                    <path-param name="test" value="testValue"/>
                </invoke>
            </action>
        </actions>
        <fields>
            <input-text id="id" required="true"/>
            <input-text id="name">
                <validations white-list="conditionName"/>
            </input-text>
            <input-text id="surname">
                <validations white-list="constraintSurname"/>
            </input-text>
            <date-time id="birthdate"/>
        </fields>
    </form>
</simple-page>