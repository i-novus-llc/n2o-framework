<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form>
        <datasource object-id="testFormValidations"/>
        <fields>
            <input-text id="testField">
                <validations white-list="Mandatory1,Mandatory2,Mandatory3,Mandatory4,test1,test2,test3,test4,test5,test7">
                    <condition id="Condition1" severity="danger" side="client">test</condition>
                    <condition id="Condition2" severity="danger" server-moment="before-operation" side="client,server">test</condition>
                    <condition id="Condition3" severity="danger" server-moment="before-operation">test</condition>
                    <condition id="test11" severity="danger" server-moment="before-operation" side="server"/>
                </validations>
            </input-text>
            <input-text id="testField2"/>
            <input-text id="testField3">
                <dependencies>
                    <requiring on="testField2">testField2 == 'test'</requiring>
                    <requiring on="testField3">testField3 == 'test'</requiring>
                </dependencies>
            </input-text>
            <interval-field id="testInterval">
                <begin>
                    <masked-input id="testIntervalBegin" placeholder="--:--" mask="99:99">
                        <validations>
                            <condition id="testIntervalBeginCheck" severity="danger" message="Некорректное время">typeof testIntervalBegin == 'undefined'</condition>
                        </validations>
                    </masked-input>
                </begin>
                <end>
                    <masked-input id="testIntervalEnd" no-label="true" placeholder="--:--" mask="99:99">
                        <validations>
                            <condition id="testIntervalEndCheck" severity="danger" message="Некорректное время">typeof testIntervalEnd == 'undefined'</condition>
                        </validations>
                    </masked-input>
                </end>
            </interval-field>
            <input-text id="testField4">
                <dependencies>
                    <requiring on="testField">return typeof testField != 'undefined' &amp;&amp; testField != null &amp;&amp; testField == 2</requiring>
                </dependencies>
            </input-text>
        </fields>
    </form>
</simple-page>