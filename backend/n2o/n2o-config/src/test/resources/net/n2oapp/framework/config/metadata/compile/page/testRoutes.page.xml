<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" route="/page">
    <regions>
        <region>
            <table id="master">
                <columns>
                    <column text-field-id="id"/>
                </columns>
            </table>
            <form id="detail">
                <datasource size="1" query-id="testStandardPageDependency" route="/:master_id/detail">
                    <dependencies>
                        <fetch on="master" model="resolve"/>
                    </dependencies>
                    <filters>
                        <eq field-id="parent.id" param="master_id" value="{id}" datasource="master" model="resolve" required="true"/>
                    </filters>
                </datasource>
                <fields>
                    <input-text id="id"/>
                </fields>
            </form>
            <form id="detail2">
                <datasource size="1" query-id="testStandardPageDependency">
                    <dependencies>
                        <fetch on="master" model="resolve"/>
                    </dependencies>
                    <filters>
                        <eq field-id="parent.id" value="{id}" datasource="master" model="resolve" required="true"/>
                    </filters>
                </datasource>
                <fields>
                    <input-text id="id"/>
                </fields>
            </form>
            <table id="detail4">
                <datasource query-id="testStandardPageDependency">
                    <dependencies>
                        <fetch on="detail" model="resolve"/>
                    </dependencies>
                    <filters>
                        <eq field-id="parent.id" value="{id}" datasource="detail" model="resolve" required="true"/>
                    </filters>
                </datasource>
                <columns>
                    <column text-field-id="id"/>
                </columns>
            </table>
            <form id="detail5">
                <datasource size="1" query-id="testStandardPageDependency" route="/form">
                    <dependencies>
                        <fetch on="detail" model="resolve"/>
                    </dependencies>
                    <filters>
                        <eq field-id="parent.id" value="{id}" datasource="detail" model="resolve" required="true"/>
                    </filters>
                </datasource>
                <fields>
                    <input-text id="id"/>
                </fields>
            </form>
        </region>
    </regions>
</page>