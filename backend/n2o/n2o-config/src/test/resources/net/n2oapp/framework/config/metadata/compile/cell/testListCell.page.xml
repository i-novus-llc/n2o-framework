<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <table>
        <columns>
            <column text-field-id="simple">
                <list color="danger" inline="true" separator="; "/>
            </column>
            <column text-field-id="texts">
                <list label-field-id="textField" inline="true" separator=", ">
                    <text format="password"/>
                </list>
            </column>
            <column text-field-id="noTexts">
                <list label-field-id="textField" inline="true" separator=". ">
                </list>
            </column>
            <column text-field-id="links">
                <list size="5" label-field-id="linkField">
                    <link url="/test" target="newWindow"/>
                </list>
            </column>
            <column text-field-id="badges">
                <list label-field-id="badgeField">
                    <badge text="{text}" color="success"/>
                </list>
            </column>
            <column text-field-id="customs">
                <list label-field-id="customField">
                    <cell src="testCell"/>
                </list>
            </column>
        </columns>
    </table>
</simple-page>