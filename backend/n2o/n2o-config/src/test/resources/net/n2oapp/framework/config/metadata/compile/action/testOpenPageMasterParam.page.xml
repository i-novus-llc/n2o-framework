<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="detail" object-id="testShowModal">
    <regions>
        <panel>
            <form id="form">
                <datasource size="1" query-id="testShowModal" object-id="testShowModal" route="/"/>
                <toolbar>
                    <button label="Изменить" icon="fa fa-pencil" model="resolve">
                        <show-modal page-id="testOpenPageMasterParam" submit-operation-id="update" object-id="testShowModal" route="/update2">
                            <datasources>
                                <datasource default-values-mode="query">
                                    <filters>
                                        <eq field-id="id" param="sid" value="{id}"/>
                                    </filters>
                                </datasource>
                            </datasources>
                            <params>
                                <query-param name="sid" value="{id}"/>
                            </params>
                        </show-modal>
                    </button>
                    <button id="byName">
                        <show-modal page-id="testOpenPageMasterParam"/>
                    </button>
                </toolbar>
            </form>
        </panel>
        <panel>
            <form id="modalDetail">
                <datasource size="1" query-id="testShowModal" object-id="testShowModal" route="/detail2">
                    <filters>
                        <eq field-id="id" param="sid" value="{id}" datasource="form"/>
                    </filters>
                </datasource>
            </form>
        </panel>
    </regions>
</page>