<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <regions>
        <panel>
            <table id="master1">
                <datasource query-id="testStandardPageDependency"/>
            </table>
            <table id="detail1">
                <datasource query-id="testStandardPageDependency">
                    <dependencies>
                        <fetch on="master1" model="resolve"/>
                    </dependencies>
                    <filters>
                        <eq field-id="name" param="nameParam" routable="true" value="test" datasource="master1"/>
                        <in field-id="gender.id" datasource="master1">
                            <value>1</value>
                            <value>2</value>
                        </in>
                        <eq field-id="parent.id" value="{id}" datasource="master1" model="resolve" required="true"/>
                    </filters>
                </datasource>
            </table>
        </panel>
        <panel>
            <table id="master2">
                <datasource query-id="testStandardPageDependency"/>
            </table>
            <table id="detail2">
                <datasource query-id="testStandardPageDependency">
                    <filters>
                        <eq field-id="name" value="{name}" datasource="master2" model="filter"/>
                        <in field-id="gender.id" values="{genders*.id}" datasource="master2" model="filter"/>
                    </filters>
                </datasource>
            </table>
        </panel>
    </regions>
</page>