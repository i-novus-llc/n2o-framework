        <datasources>
            <datasource id="ds" query-id="test"/>
        </datasources>
        <breadcrumbs>
            <crumb label="Вторая страница" path="/page1"/>
        </breadcrumbs>
        <toolbars>
            <toolbar>
                <button label="Кнопка" color="danger">
                    <alert text="Сообщение"/>
