<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             xmlns:test="http://n2oapp.net/framework/config/schema/testAttrs">
    <form>
        <fields>
            <set label="{label}" help="This is {help}" description="description" field-label-location="left"
                 field-label-align="right" field-label-width="30" visible="true" enabled="false"
                 test:codeVerified="{emailSender.status=='send'}"/>
            <set/>
            <set label="testBadge" badge="{test}"/>
            <set label="testBadge" badge="text" badge-position="left" badge-shape="circle" badge-image="test" badge-image-position="right" badge-image-shape="square"/>
        </fields>
    </form>
</simple-page>
