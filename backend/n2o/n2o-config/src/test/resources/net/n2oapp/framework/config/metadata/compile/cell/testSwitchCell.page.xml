<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0">
    <table>
        <columns>
            <column text-field-id="test">
                <switch value-field-id="type.id">
                    <case value="type1">
                        <badge text="text" format="format"/>
                    </case>
                    <case value="type2">
                        <icon text="text" icon="icon" position="right"/>
                    </case>
                    <default>
                        <text format="format" subtext-field-id="field1"/>
                    </default>
                </switch>
            </column>
        </columns>
    </table>
</simple-page>