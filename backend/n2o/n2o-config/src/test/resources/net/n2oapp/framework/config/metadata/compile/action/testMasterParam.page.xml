<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <regions>
        <panel>
            <table id="master">
                <datasource query-id="testShowModal" object-id="testShowModal" default-values-mode="query"/>
                <toolbar>
                    <button label="Изменить" icon="fa fa-pencil" model="resolve">
                        <open-page page-id="testOpenPageMasterParam" submit-operation-id="update" object-id="testShowModal">
                            <datasources>
                                <datasource default-values-mode="query">
                                    <filters>
                                        <eq field-id="id" param="sid" value="{id}"/>
                                    </filters>
                                </datasource>
                            </datasources>
                            <params>
                                <query-param name="sid" value="{id}"/>
                            </params>
                        </open-page>
                    </button>
                </toolbar>
            </table>
        </panel>
        <panel>
            <form id="detail">
                <datasource size="1" query-id="testShowModal">
                    <dependencies>
                        <fetch on="master" model="resolve"/>
                    </dependencies>
                    <filters>
                        <eq field-id="id" param="sid" value="{id}" datasource="master" model="resolve" required="true"/>
                    </filters>
                </datasource>
                <toolbar>
                    <button label="Изменить" icon="fa fa-pencil" model="resolve">
                        <open-page page-id="testOpenPageMasterParam" submit-operation-id="update" object-id="testShowModal">
                            <datasources>
                                <datasource default-values-mode="query">
                                    <filters>
                                        <eq field-id="id" param="sid" value="{id}"/>
                                    </filters>
                                </datasource>
                            </datasources>
                            <params>
                                <query-param name="sid" value="{id}"/>
                            </params>
                        </open-page>
                    </button>
                </toolbar>
            </form>
        </panel>
    </regions>
</page>