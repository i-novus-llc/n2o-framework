<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="${client.view}">
    <form>
        <datasource size="1" query-id="ProtoClient">
            <filters>
                <eq field-id="id" param="id"/>
            </filters>
        </datasource>
        <fields>
            <row>
                <input-text id="surname" required="true" enabled="false" label="${surname}" placeholder="Введите значение"/>
                <input-text id="name" required="true" enabled="false" label="${name}"/>
                <input-text id="patrName" enabled="false" label="${patronymic}" default-value="Тест"/>
            </row>
            <line>
                <row>
                    <col size="5">
                        <select id="gender" required="true" enabled="false" label="${gender}" query-id="ProtoGender" label-field-id="name"/>
                    </col>
                    <col size="5">
                        <date-time id="birthday" enabled="false" label="${bdate}"/>
                    </col>
                    <checkbox id="vip" enabled="false"/>
                </row>
            </line>
            <text-area id="note" enabled="false" label="${note}"/>
        </fields>
    </form>
</simple-page>