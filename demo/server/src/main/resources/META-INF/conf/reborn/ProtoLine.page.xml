<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="${horizontal.divider}">
    <regions>
        <line id="firstTab" label="${clients}">
            <table id="first">
                <datasource query-id="ProtoClient"/>
                <pagination/>
                <columns>
                    <column text-field-id="name"/>
                    <column text-field-id="surname"/>
                </columns>
            </table>
            <table id="second">
                <datasource query-id="ProtoClient"/>
                <pagination/>
                <columns>
                    <column text-field-id="name"/>
                    <column text-field-id="surname"/>
                    <column text-field-id="genderName">
                        <badge/>
                    </column>
                </columns>
            </table>
            <table id="third">
                <datasource query-id="ProtoClient"/>
                <pagination/>
                <columns>
                    <column text-field-id="name"/>
                    <column text-field-id="surname"/>
                    <column text-field-id="vip">
                        <checkbox/>
                    </column>
                </columns>
            </table>
        </line>
    </regions>
</page>