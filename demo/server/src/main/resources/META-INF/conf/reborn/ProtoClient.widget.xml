<?xml version='1.0' encoding='UTF-8'?>
<form xmlns="http://n2oapp.net/framework/config/schema/widget-5.0">
    <fields>
        <row>
            <input-text id="surname" label="${surname}"/>
            <input-text id="name" label="${name}"/>
        </row>
        <row>
            <col size="8">
                <radio-group id="gender" enabled="false" label="${gender}"
                             query-id="ProtoGender" label-field-id="name"/>
            </col>
            <col>
                <checkbox style="font-weight: bold" id="vip" enabled="false"/>
            </col>
        </row>
    </fields>
</form>