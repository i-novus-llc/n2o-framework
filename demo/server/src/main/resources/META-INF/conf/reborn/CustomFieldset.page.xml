<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="${clients.card}"
             route="/custom/route/fieldset">
    <form>
        <datasource size="1" query-id="ProtoClient"/>
        <fields>
            <set src="CollapsedCardFieldset">
                <row>
                    <col>
                        <input-text id="surname" required="true" label="${surname}" placeholder="${enter.value}"/>
                    </col>
                    <col>
                        <input-text id="name" required="true" label="${name}"/>
                    </col>
                    <col>
                        <input-text id="patrName" label="${patronymic}" default-value="Тест"/>
                    </col>
                </row>
            </set>
            <row>
                <col size="5">
                    <input-select-tree id="address" label="${address}" query-id="stubAddress" label-field-id="name"
                                       value-field-id="id" search-filter-id="name" checkboxes="true"
                                       parent-field-id="parent_id" has-children-field-id="hasChildren"/>
                </col>
            </row>
        </fields>
    </form>
</simple-page>