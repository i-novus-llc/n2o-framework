<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="${contacts}">
    <regions>
        <region>
            <form>
                <datasource size="1" query-id="ProtoContacts"/>
                <fields>
                    <hidden id="individualId" param="client_id"/>
                    <row>
                        <input-select id="type" label="${contact.type}" label-field-id="name">
                            <options>
                                <option id="2" name="${full.phone}"/>
                                <option id="4" name="${email}"/>
                                <option id="7" name="${fax}"/>
                            </options>
                        </input-select>
                        <col>
                            <masked-input id="phone" visible="{type.id == 2}" label="${phone}" placeholder="+7 (___) ___-__-__" mask="+7 (999) 999-99-99"/>
                            <input-text id="email" visible="{type.id == 4}" label="${email}"/>
                        </col>
                    </row>
                    <input-text id="note" enabled="{type.id == 2}" label="${note}"/>
                </fields>
            </form>
        </region>
    </regions>
</page>